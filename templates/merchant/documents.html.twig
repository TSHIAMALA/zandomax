{% extends 'merchant/base_merchant.html.twig' %}

{% block title %}Mes Documents - ZANDO Market{% endblock %}

{% block content %}
<div class="container-fluid px-4 py-6">
    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Mes Documents</h1>
        <p class="text-gray-600 mt-1">Gérez vos documents d'identification et justificatifs</p>
    </div>

    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
            <div class="flex items-center">
                <i class="fas fa-check-circle text-green-500 mr-3"></i>
                <p class="text-green-700">{{ message }}</p>
            </div>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
                <p class="text-red-700">{{ message }}</p>
            </div>
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Upload Form -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm p-6 sticky top-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-cloud-upload-alt mr-2 text-purple-600"></i>
                    Uploader un Document
                </h2>
                
                <form method="post" enctype="multipart/form-data" id="uploadForm">
                    <div class="space-y-4">
                        <!-- Document Type -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Type de document <span class="text-red-500">*</span>
                            </label>
                            <select name="type" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
                                <option value="">Sélectionnez...</option>
                                <option value="CNI">CNI (Carte d'Identité)</option>
                                <option value="RCCM">RCCM (Registre Commerce)</option>
                                <option value="NIF">NIF (Numéro Fiscal)</option>
                                <option value="PASSPORT">Passeport</option>
                                <option value="AUTRES">Autres</option>
                            </select>
                        </div>

                        <!-- File Input -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Fichier <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input type="file" name="file" id="fileInput" required accept=".pdf,.jpg,.jpeg,.png"
                                       class="hidden">
                                <label for="fileInput" 
                                       class="flex items-center justify-center w-full px-4 py-8 border-2 border-dashed border-gray-300 rounded-lg cursor-pointer hover:border-purple-500 transition">
                                    <div class="text-center">
                                        <i class="fas fa-file-upload text-4xl text-gray-400 mb-2"></i>
                                        <p class="text-sm text-gray-600">Cliquez pour sélectionner</p>
                                        <p class="text-xs text-gray-500 mt-1">PDF, JPG, PNG (max 5MB)</p>
                                    </div>
                                </label>
                            </div>
                            <p id="fileName" class="text-sm text-gray-600 mt-2"></p>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" 
                                class="w-full px-4 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg font-semibold hover:from-purple-700 hover:to-pink-700 transition transform hover:scale-105">
                            <i class="fas fa-upload mr-2"></i>Uploader
                        </button>
                    </div>
                </form>

                <!-- Info Box -->
                <div class="mt-6 p-4 bg-blue-50 border-l-4 border-blue-500 rounded-r">
                    <h4 class="font-semibold text-blue-800 mb-2">
                        <i class="fas fa-info-circle mr-1"></i>Informations
                    </h4>
                    <ul class="text-sm text-blue-700 space-y-1">
                        <li>• Taille maximale: 5 MB</li>
                        <li>• Formats acceptés: PDF, JPG, PNG</li>
                        <li>• Documents requis: CNI, RCCM, NIF</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Documents List -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">
                    <i class="fas fa-folder-open mr-2 text-purple-600"></i>
                    Documents Uploadés
                </h2>

                {% if documents is not empty %}
                <div class="space-y-3">
                    {% for document in documents %}
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                        <div class="flex items-center flex-1">
                            <!-- Icon based on file type -->
                            {% if document.filename ends with '.pdf' %}
                                <i class="fas fa-file-pdf text-3xl text-red-500 mr-4"></i>
                            {% else %}
                                <i class="fas fa-file-image text-3xl text-blue-500 mr-4"></i>
                            {% endif %}
                            
                            <div class="flex-1">
                                <h4 class="font-semibold text-gray-800">{{ document.type }}</h4>
                                <p class="text-sm text-gray-500">{{ document.original_name }}</p>
                                <div class="flex gap-4 mt-1">
                                    <span class="text-xs text-gray-400">
                                        <i class="fas fa-calendar mr-1"></i>
                                        {{ document.uploaded_at }}
                                    </span>
                                    <span class="text-xs text-gray-400">
                                        <i class="fas fa-weight mr-1"></i>
                                        {{ (document.size / 1024)|round(2) }} KB
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="flex gap-2 ml-4">
                            <a href="{{ path('api_documents_download', {id: merchant.id|bin2hex, filename: document.filename}) }}" 
                               target="_blank"
                               class="px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition text-sm">
                                <i class="fas fa-download"></i>
                            </a>
                            <form method="post" action="{{ path('merchant_documents_delete', {filename: document.filename}) }}" 
                                  onsubmit="return confirm('Supprimer ce document ?')" class="inline">
                                <button type="submit" class="px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition text-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-12">
                    <i class="fas fa-folder-open text-6xl text-gray-300 mb-4"></i>
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">Aucun document</h3>
                    <p class="text-gray-500">Commencez par uploader vos documents d'identification</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
const fileInput = document.getElementById('fileInput');
const fileName = document.getElementById('fileName');
const uploadForm = document.getElementById('uploadForm');

fileInput.addEventListener('change', function(e) {
    if (e.target.files.length > 0) {
        const file = e.target.files[0];
        const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
        fileName.textContent = `${file.name} (${sizeMB} MB)`;
        
        // Validate file size
        if (file.size > 5242880) { // 5MB
            alert('Le fichier est trop volumineux (max 5MB)');
            fileInput.value = '';
            fileName.textContent = '';
        }
    }
});

uploadForm.addEventListener('submit', function(e) {
    const file = fileInput.files[0];
    if (!file) {
        e.preventDefault();
        alert('Veuillez sélectionner un fichier');
        return false;
    }
});
</script>
{% endblock %}
