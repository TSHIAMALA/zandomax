{% extends 'merchant/base.html.twig' %}

{% block title %}R√©server {{ space.code }} - ZANDO Market{% endblock %}
{% block header %}R√©server un Espace{% endblock %}
{% block subtitle %}{{ space.code }} - {{ space.zone }}{% endblock %}

{% block content %}

<div class="mb-6">
    <a href="{{ path('merchant_spaces') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
        <i class="fas fa-arrow-left mr-2"></i>
        Retour aux espaces
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Informations de l'espace -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-6">
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-4 rounded-lg mb-4">
                <h3 class="text-white text-2xl font-bold">{{ space.code }}</h3>
                <p class="text-blue-100">{{ space.zone }}</p>
            </div>
            
            <div class="space-y-3">
                <div class="flex items-center text-gray-700">
                    <i class="fas fa-tag w-6 text-blue-600"></i>
                    <span class="text-sm">{{ space.spaceCategory.name }}</span>
                </div>
                <div class="flex items-center text-gray-700">
                    <i class="fas fa-cube w-6 text-purple-600"></i>
                    <span class="text-sm">{{ space.spaceType.label }}</span>
                </div>
                <div class="flex items-center text-gray-700">
                    <i class="fas fa-check-circle w-6 text-green-600"></i>
                    <span class="text-sm font-semibold text-green-600">Disponible</span>
                </div>
            </div>

            <!-- Tarifs disponibles -->
            {% if pricingRules|length > 0 %}
            <div class="mt-6 pt-4 border-t border-gray-200">
                <h4 class="text-sm font-semibold text-gray-800 mb-3">
                    <i class="fas fa-money-bill-wave mr-2 text-green-600"></i>
                    Tarifs disponibles
                </h4>
                <div class="space-y-2">
                    {% for rule in pricingRules %}
                    <div class="flex justify-between items-center text-sm bg-gray-50 p-2 rounded">
                        <span class="text-gray-600">{{ rule.periodicity.label }}</span>
                        <span class="font-bold text-green-600">{{ rule.price|number_format(0, ',', ' ') }} {{ rule.currency.code ?? 'CDF' }}</span>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% else %}
            <div class="mt-6 pt-4 border-t border-gray-200">
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-3 rounded-r">
                    <p class="text-xs text-yellow-700">
                        <i class="fas fa-info-circle mr-1"></i>
                        Les tarifs seront communiqu√©s par l'administrateur apr√®s votre demande.
                    </p>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Formulaire de r√©servation -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">D√©tails de la r√©servation</h3>
            
            <form method="post" action="{{ path('merchant_space_reserve_submit', {'id': space.id|bin2hex}) }}" class="space-y-6">
                <!-- P√©riodicit√© -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-calendar-alt mr-2 text-blue-600"></i>
                        P√©riodicit√©
                    </label>
                    <select name="periodicity" id="periodicity" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">S√©lectionnez une p√©riodicit√©</option>
                        {% if pricingRules|length > 0 %}
                            {% for rule in pricingRules %}
                            <option value="{{ rule.periodicity.value }}" data-price="{{ rule.price }}" data-currency="{{ rule.currency.code ?? 'CDF' }}" data-label="{{ rule.periodicity.label }}">
                                {{ rule.periodicity.label }} - {{ rule.price|number_format(0, ',', ' ') }} {{ rule.currency.code ?? 'CDF' }}
                            </option>
                            {% endfor %}
                        {% else %}
                            <option value="day" data-price="0" data-currency="CDF" data-label="Jour">Journalier</option>
                            <option value="week" data-price="0" data-currency="CDF" data-label="Semaine">Hebdomadaire</option>
                            <option value="month" data-price="0" data-currency="CDF" data-label="Mois">Mensuel</option>
                            <option value="quarter" data-price="0" data-currency="CDF" data-label="Trimestre">Trimestriel</option>
                            <option value="semester" data-price="0" data-currency="CDF" data-label="Semestre">Semestriel</option>
                            <option value="year" data-price="0" data-currency="CDF" data-label="Ann√©e">Annuel</option>
                        {% endif %}
                    </select>
                </div>

                <!-- Prix unitaire affich√© (seulement si prix configur√©) -->
                <div id="unitPriceDisplay" class="hidden bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-blue-700">Prix unitaire :</span>
                        <span id="unitPriceValue" class="text-lg font-bold text-blue-800">0 CDF</span>
                    </div>
                </div>

                <!-- Dur√©e avec label dynamique -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-clock mr-2 text-purple-600"></i>
                        Dur√©e <span id="durationLabel" class="text-gray-500">(nombre de p√©riodes)</span>
                    </label>
                    <div class="flex items-center space-x-3">
                        <input type="number" name="duration" id="duration" min="1" max="365" required 
                               autocomplete="off"
                               class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Ex: 3">
                        <span id="periodLabel" class="text-gray-600 font-medium min-w-[100px]">p√©riode(s)</span>
                    </div>
                    <p id="durationHint" class="text-xs text-gray-500 mt-1">S√©lectionnez d'abord une p√©riodicit√©</p>
                </div>

                <!-- Montant total calcul√© -->
                <div id="totalAmountDisplay" class="hidden bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-green-700">Montant total estim√© :</span>
                        <span id="totalAmountValue" class="text-xl font-bold text-green-800">0 CDF</span>
                    </div>
                </div>

                <!-- Message si pas de prix configur√© -->
                <div id="noPriceMessage" class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <div class="flex items-center">
                        <i class="fas fa-info-circle text-yellow-500 mr-3"></i>
                        <span class="text-sm text-yellow-700">Le montant sera calcul√© et communiqu√© par l'administrateur apr√®s validation de votre demande.</span>
                    </div>
                </div>

                <!-- Moyen de paiement -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-credit-card mr-2 text-indigo-600"></i>
                        Moyen de paiement pr√©f√©r√©
                    </label>
                    <select name="payment_method" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">S√©lectionnez un moyen de paiement</option>
                        <option value="cash">üíµ Esp√®ces</option>
                        <option value="airtel_money">üì± Airtel Money</option>
                        <option value="mpesa">üì± M-Pesa</option>
                        <option value="orange_money">üì± Orange Money</option>
                        <option value="bank_transfer">üè¶ Virement bancaire</option>
                        <option value="credit_card">üí≥ Carte bancaire</option>
                    </select>
                </div>

                <!-- Notes additionnelles -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-comment mr-2 text-gray-600"></i>
                        Notes additionnelles (optionnel)
                    </label>
                    <textarea name="notes" rows="3"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                              placeholder="Ajoutez des informations suppl√©mentaires..."></textarea>
                </div>

                <!-- Informations importantes -->
                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 text-xl mr-3 mt-1"></i>
                        <div>
                            <h4 class="font-semibold text-blue-800 mb-2">Informations importantes</h4>
                            <ul class="text-sm text-blue-700 space-y-1">
                                <li>‚Ä¢ Votre r√©servation sera soumise √† validation par l'administrateur</li>
                                <li>‚Ä¢ Vous recevrez une notification une fois la r√©servation approuv√©e</li>
                                <li>‚Ä¢ Le paiement devra √™tre effectu√© selon le moyen choisi</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="flex items-center justify-between pt-4 border-t">
                    <a href="{{ path('merchant_spaces') }}" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                        <i class="fas fa-times mr-2"></i>
                        Annuler
                    </a>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition font-semibold">
                        <i class="fas fa-check mr-2"></i>
                        Confirmer la r√©servation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const periodicitySelect = document.getElementById('periodicity');
    const durationInput = document.getElementById('duration');
    const unitPriceDisplay = document.getElementById('unitPriceDisplay');
    const unitPriceValue = document.getElementById('unitPriceValue');
    const totalAmountDisplay = document.getElementById('totalAmountDisplay');
    const totalAmountValue = document.getElementById('totalAmountValue');
    const periodLabel = document.getElementById('periodLabel');
    const durationHint = document.getElementById('durationHint');
    const noPriceMessage = document.getElementById('noPriceMessage');

    let currentPrice = 0;
    let currentCurrency = 'CDF';

    const periodLabels = {
        'day': 'jour(s)',
        'week': 'semaine(s)',
        'month': 'mois',
        'quarter': 'trimestre(s)',
        'semester': 'semestre(s)',
        'year': 'ann√©e(s)'
    };

    const periodExamples = {
        'day': 'Ex: 7 jours = 1 semaine',
        'week': 'Ex: 4 semaines ‚âà 1 mois',
        'month': 'Ex: 3 mois = 1 trimestre',
        'quarter': 'Ex: 2 trimestres = 6 mois',
        'semester': 'Ex: 2 semestres = 1 an',
        'year': 'Ex: 1 an = 12 mois'
    };

    function formatNumber(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
    }

    function updatePriceDisplay() {
        const selectedOption = periodicitySelect.options[periodicitySelect.selectedIndex];
        
        if (selectedOption && selectedOption.value) {
            currentPrice = parseFloat(selectedOption.dataset.price) || 0;
            currentCurrency = selectedOption.dataset.currency || 'CDF';
            
            // Mettre √† jour le label de la dur√©e
            periodLabel.textContent = periodLabels[selectedOption.value] || 'p√©riode(s)';
            durationHint.textContent = periodExamples[selectedOption.value] || '';
            
            if (currentPrice > 0) {
                unitPriceDisplay.classList.remove('hidden');
                unitPriceValue.textContent = formatNumber(currentPrice) + ' ' + currentCurrency;
                noPriceMessage.classList.add('hidden');
                updateTotalAmount();
            } else {
                unitPriceDisplay.classList.add('hidden');
                totalAmountDisplay.classList.add('hidden');
                noPriceMessage.classList.remove('hidden');
            }
        } else {
            unitPriceDisplay.classList.add('hidden');
            totalAmountDisplay.classList.add('hidden');
            noPriceMessage.classList.add('hidden');
            periodLabel.textContent = 'p√©riode(s)';
            durationHint.textContent = 'S√©lectionnez d\'abord une p√©riodicit√©';
        }
    }

    function updateTotalAmount() {
        const duration = parseInt(durationInput.value) || 0;
        
        if (duration > 0 && currentPrice > 0) {
            const total = currentPrice * duration;
            totalAmountDisplay.classList.remove('hidden');
            totalAmountValue.textContent = formatNumber(total) + ' ' + currentCurrency;
        } else {
            totalAmountDisplay.classList.add('hidden');
        }
    }

    periodicitySelect.addEventListener('change', updatePriceDisplay);
    durationInput.addEventListener('input', updateTotalAmount);
});
</script>

{% endblock %}
