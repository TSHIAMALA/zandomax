{% extends 'merchant/base_merchant.html.twig' %}

{% block title %}Mon Espace - ZANDO Market{% endblock %}

{% block content %}
<!-- Quick Action Button -->
<div class="mb-3">
    <a href="{{ path('merchant_spaces') }}" class="inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-xs rounded-lg hover:from-purple-700 hover:to-pink-700 transition shadow">
        <i class="fas fa-plus-circle mr-1.5 text-xs"></i>
        RÃ©server un Espace
    </a>
</div>

<!-- Carte de Bienvenue -->
<div class="gradient-market rounded-lg shadow p-4 text-white mb-4">
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
            <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center text-2xl">
                ðŸ‘¤
            </div>
            <div>
                <h2 class="text-lg font-bold mb-0.5">{{ merchant.firstname }} {{ merchant.lastname }}</h2>
                <p class="text-white text-opacity-90 text-xs">
                    <i class="fas fa-envelope mr-1"></i>{{ merchant.email }}
                </p>
                <p class="text-white text-opacity-90 text-xs">
                    <i class="fas fa-phone mr-1"></i>{{ merchant.phone }}
                </p>
            </div>
        </div>
        <div class="text-right">
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold
                {% if merchant.status.value == 'active' %}bg-green-500
                {% elseif merchant.status.value == 'pending_validation' %}bg-yellow-500
                {% else %}bg-red-500{% endif %} bg-opacity-90">
                <i class="fas fa-circle mr-2 text-xs"></i>
                {{ merchant.status.value|upper }}
            </span>
        </div>
    </div>
</div>

<!-- Stats Rapides -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-3 mb-4">
    <div class="bg-white rounded-lg shadow p-3">
        <div class="flex items-center justify-between mb-2">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                <i class="fas fa-wallet text-blue-600 text-sm"></i>
            </div>
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-0.5">{{ totalPaid|number_format(0, ',', ' ') }} FCFA</h3>
        <p class="text-xs text-gray-500">Total PayÃ©</p>
    </div>

    {% if contract %}
    <div class="bg-white rounded-lg shadow p-3">
        <div class="flex items-center justify-between mb-2">
            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                <i class="fas fa-store text-purple-600 text-sm"></i>
            </div>
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-0.5">{{ contract.space.code }}</h3>
        <p class="text-xs text-gray-500">Mon Espace</p>
    </div>

    <div class="bg-white rounded-lg shadow p-3">
        <div class="flex items-center justify-between mb-2">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <i class="fas fa-calendar text-green-600 text-sm"></i>
            </div>
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-0.5">{{ contract.endDate|date('d/m/Y') }}</h3>
        <p class="text-xs text-gray-500">Fin du Contrat</p>
    </div>
    {% endif %}
</div>

<!-- Contrat et Paiements -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <!-- Mon Contrat -->
    {% if contract %}
    <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-base font-bold text-gray-800">Mon Contrat</h3>
            <a href="{{ path('merchant_contract') }}" class="text-purple-600 hover:text-purple-700 text-xs font-medium">
                Voir dÃ©tails â†’
            </a>
        </div>
        
        <div class="space-y-2">
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-home text-purple-600 text-sm"></i>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500">Espace</p>
                        <p class="font-semibold text-sm text-gray-800">{{ contract.space.code }}</p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-money-bill-wave text-blue-600 text-sm"></i>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500">Loyer Mensuel</p>
                        <p class="font-semibold text-sm text-gray-800">{{ contract.rentAmount|number_format(0, ',', ' ') }} CDF</p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-shield-alt text-green-600 text-sm"></i>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500">Garantie</p>
                        <p class="font-semibold text-sm text-gray-800">{{ contract.guaranteeAmount|number_format(0, ',', ' ') }} CDF</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Paiements RÃ©cents -->
    <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-base font-bold text-gray-800">Paiements RÃ©cents</h3>
            <a href="{{ path('merchant_payments') }}" class="text-purple-600 hover:text-purple-700 text-xs font-medium">
                Voir tout â†’
            </a>
        </div>
        
        {% if recentPayments|length > 0 %}
        <div class="space-y-2">
            {% for payment in recentPayments %}
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 
                        {% if payment.status.value == 'paid' %}bg-green-100
                        {% elseif payment.status.value == 'pending' %}bg-yellow-100
                        {% else %}bg-red-100{% endif %} 
                        rounded-lg flex items-center justify-center">
                        <i class="fas text-sm
                            {% if payment.status.value == 'paid' %}fa-check text-green-600
                            {% elseif payment.status.value == 'pending' %}fa-clock text-yellow-600
                            {% else %}fa-times text-red-600{% endif %}"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-sm text-gray-800">{{ payment.amount|number_format(0, ',', ' ') }} FCFA</p>
                        <p class="text-xs text-gray-500">{{ payment.createdAt|date('d/m/Y') }}</p>
                    </div>
                </div>
                <span class="px-2 py-0.5 rounded-full text-xs font-semibold
                    {% if payment.status.value == 'paid' %}bg-green-100 text-green-700
                    {% elseif payment.status.value == 'pending' %}bg-yellow-100 text-yellow-700
                    {% else %}bg-red-100 text-red-700{% endif %}">
                    {{ payment.status.value|upper }}
                </span>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-12">
            <i class="fas fa-receipt text-gray-300 text-5xl mb-4"></i>
            <p class="text-gray-500">Aucun paiement enregistrÃ©</p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
