{% extends 'merchant/base.html.twig' %}

{% block title %}Mon Espace Marchand - ZANDO Market{% endblock %}
{% block header %}Mon Espace Marchand{% endblock %}
{% block subtitle %}Bienvenue {{ merchant.firstname }} {{ merchant.lastname }}{% endblock %}

{% block content %}

{# Notification de validation en attente #}
{% if merchant.status.value == 'pending_validation' %}
<div class="mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-6 rounded-r-lg shadow-md">
    <div class="flex items-start">
        <div class="flex-shrink-0">
            <i class="fas fa-exclamation-triangle text-yellow-400 text-3xl"></i>
        </div>
        <div class="ml-4 flex-1">
            <h3 class="text-lg font-semibold text-yellow-800 mb-2">
                <i class="fas fa-clock mr-2"></i>Compte en attente de validation
            </h3>
            <p class="text-yellow-700 mb-3">
                Votre compte est actuellement en attente de validation par l'administrateur. 
                Pour activer votre compte et accéder à tous les services, veuillez :
            </p>
            <ol class="list-decimal list-inside text-yellow-700 space-y-2 mb-4">
                <li>Réserver un espace dans le marché</li>
                <li>Effectuer le paiement de votre réservation</li>
                <li>L'administrateur validera votre compte après vérification du paiement</li>
            </ol>
            <a href="{{ path('merchant_spaces') }}" class="inline-flex items-center px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition">
                <i class="fas fa-store mr-2"></i>
                Voir les espaces disponibles
            </a>
        </div>
    </div>
</div>
{% elseif merchant.status.value == 'active' %}
<div class="mb-6 bg-green-50 border-l-4 border-green-400 p-4 rounded-r-lg">
    <div class="flex items-center">
        <i class="fas fa-check-circle text-green-400 text-2xl mr-3"></i>
        <div>
            <h3 class="text-lg font-semibold text-green-800">Compte activé</h3>
            <p class="text-green-700">Votre compte est actif. Vous avez accès à tous les services.</p>
        </div>
    </div>
</div>
{% endif %}

{# Statistiques rapides #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-blue-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Réservations</p>
                <p class="text-2xl font-bold text-gray-800">{{ reservations|length }}</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <i class="fas fa-calendar-check text-blue-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-green-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Statut</p>
                <p class="text-lg font-semibold text-gray-800">
                    {% if merchant.status.value == 'active' %}
                        <span class="text-green-600">Actif</span>
                    {% else %}
                        <span class="text-yellow-600">En attente</span>
                    {% endif %}
                </p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-shield-alt text-green-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-purple-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Niveau KYC</p>
                <p class="text-lg font-semibold text-gray-800">
                    {% if merchant.kycLevel.value == 'verified' %}Vérifié
                    {% elseif merchant.kycLevel.value == 'full' %}Complet
                    {% else %}Basique{% endif %}
                </p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                <i class="fas fa-user-check text-purple-600 text-xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border-l-4 border-orange-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Espaces disponibles</p>
                <p class="text-2xl font-bold text-gray-800">{{ availableSpaces|length }}</p>
            </div>
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                <i class="fas fa-store text-orange-600 text-xl"></i>
            </div>
        </div>
    </div>
</div>

{# Actions rapides #}
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <a href="{{ path('merchant_spaces') }}" class="bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-lg p-6 hover:from-blue-600 hover:to-blue-700 transition transform hover:scale-105 shadow-lg">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold">Réserver un espace</h3>
            <i class="fas fa-store text-3xl opacity-75"></i>
        </div>
        <p class="text-blue-100 text-sm">Parcourez les espaces disponibles et faites votre réservation</p>
    </a>

    <a href="{{ path('merchant_reservations') }}" class="bg-gradient-to-br from-purple-500 to-purple-600 text-white rounded-lg p-6 hover:from-purple-600 hover:to-purple-700 transition transform hover:scale-105 shadow-lg">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold">Mes réservations</h3>
            <i class="fas fa-calendar-alt text-3xl opacity-75"></i>
        </div>
        <p class="text-purple-100 text-sm">Consultez l'historique de vos réservations</p>
    </a>

    <a href="#" class="bg-gradient-to-br from-green-500 to-green-600 text-white rounded-lg p-6 hover:from-green-600 hover:to-green-700 transition transform hover:scale-105 shadow-lg">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-lg font-semibold">Mon profil</h3>
            <i class="fas fa-user-circle text-3xl opacity-75"></i>
        </div>
        <p class="text-green-100 text-sm">Gérez vos informations personnelles</p>
    </a>
</div>

{# Dernières réservations #}
{% if reservations|length > 0 %}
<div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-semibold mb-4 flex items-center">
        <i class="fas fa-history mr-2 text-blue-600"></i>
        Dernières réservations
    </h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Espace</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date début</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date fin</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for reservation in reservations %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-sm font-medium">{{ reservation.space.code }} - {{ reservation.space.zone }}</td>
                    <td class="px-4 py-3 text-sm">{{ reservation.startDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">{{ reservation.endDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">
                        {% if reservation.status.value == 'confirmed' %}
                            <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Confirmée</span>
                        {% elseif reservation.status.value == 'pending' %}
                            <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded">En attente</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs bg-gray-100 text-gray-800 rounded">{{ reservation.status.value }}</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-3 text-sm font-semibold">{{ reservation.totalAmount|number_format(0, ',', ' ') }} FC</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="mt-4 text-center">
        <a href="{{ path('merchant_reservations') }}" class="text-blue-600 hover:text-blue-800 font-medium">
            Voir toutes les réservations <i class="fas fa-arrow-right ml-1"></i>
        </a>
    </div>
</div>
{% else %}
<div class="bg-white rounded-lg shadow-sm p-8 text-center">
    <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
    <h3 class="text-xl font-semibold text-gray-700 mb-2">Aucune réservation</h3>
    <p class="text-gray-500 mb-4">Vous n'avez pas encore effectué de réservation</p>
    <a href="{{ path('merchant_spaces') }}" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
        <i class="fas fa-plus mr-2"></i>
        Faire une réservation
    </a>
</div>
{% endif %}

{% endblock %}
