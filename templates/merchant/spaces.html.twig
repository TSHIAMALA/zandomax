{% extends 'merchant/base_merchant.html.twig' %}

{% block title %}Espaces Disponibles - ZANDO Market{% endblock %}

{% block content %}
<div class="container-fluid px-4 py-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Espaces Disponibles</h1>
            <p class="text-gray-600 mt-1">Trouvez l'espace idéal pour votre activité</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Zone</label>
                <select name="zone" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
                    <option value="">Toutes les zones</option>
                    <option value="Zone A" {% if filters.zone == 'Zone A' %}selected{% endif %}>Zone A</option>
                    <option value="Zone B" {% if filters.zone == 'Zone B' %}selected{% endif %}>Zone B</option>
                    <option value="Zone C" {% if filters.zone == 'Zone C' %}selected{% endif %}>Zone C</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Type d'espace</label>
                <select name="space_type_id" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
                    <option value="">Tous les types</option>
                    {# Ces options devraient être chargées dynamiquement depuis la base #}
                </select>
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                    <i class="fas fa-search mr-2"></i>Rechercher
                </button>
            </div>
        </form>
    </div>

    <!-- Spaces Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for space in spaces %}
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition overflow-hidden">
            <!-- Space Header -->
            <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-4 text-white">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-2xl font-bold">{{ space.code }}</h3>
                        <p class="text-purple-100 text-sm">{{ space.zone }}</p>
                    </div>
                    <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-xs font-semibold">
                        Disponible
                    </span>
                </div>
            </div>

            <!-- Space Details -->
            <div class="p-4">
                <div class="space-y-3 mb-4">
                    <div class="flex items-center text-gray-700">
                        <i class="fas fa-tag w-5 text-purple-600"></i>
                        <span class="ml-2 text-sm">{{ space.spaceCategory.name }}</span>
                    </div>
                    {% if space.spaceType %}
                    <div class="flex items-center text-gray-700">
                        <i class="fas fa-cube w-5 text-purple-600"></i>
                        <span class="ml-2 text-sm">{{ space.spaceType.label }}</span>
                    </div>
                    {% endif %}
                    <div class="flex items-center text-gray-700">
                        <i class="fas fa-map-marker-alt w-5 text-purple-600"></i>
                        <span class="ml-2 text-sm">Zone {{ space.zone }}</span>
                    </div>
                </div>

                <!-- Action Button -->
                <a href="{{ path('merchant_reserve', {id: space.id|bin2hex}) }}" 
                   class="block w-full text-center px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:from-purple-700 hover:to-pink-700 transition transform hover:scale-105">
                    <i class="fas fa-calendar-check mr-2"></i>Réserver cet espace
                </a>
            </div>
        </div>
        {% else %}
        <div class="col-span-full">
            <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">Aucun espace disponible</h3>
                <p class="text-gray-500">Essayez de modifier vos critères de recherche</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
