{% extends 'merchant/base.html.twig' %}

{% block title %}Espaces Disponibles - ZANDO Market{% endblock %}
{% block header %}Espaces Disponibles{% endblock %}
{% block subtitle %}Choisissez votre espace dans le marché{% endblock %}

{% block content %}

<div class="mb-6">
    <a href="{{ path('merchant_dashboard') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
        <i class="fas fa-arrow-left mr-2"></i>
        Retour au dashboard
    </a>
</div>

{% if spaces|length > 0 %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for space in spaces %}
    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition">
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-4">
            <h3 class="text-white text-xl font-bold">{{ space.code }}</h3>
            <p class="text-blue-100">{{ space.zone }}</p>
        </div>
        <div class="p-6">
            <div class="space-y-3 mb-4">
                <div class="flex items-center text-gray-700">
                    <i class="fas fa-tag w-6 text-blue-600"></i>
                    <span class="text-sm">{{ space.spaceCategory.name }}</span>
                </div>
                <div class="flex items-center text-gray-700">
                    <i class="fas fa-cube w-6 text-purple-600"></i>
                    <span class="text-sm">{{ space.spaceType.label }}</span>
                </div>
                <div class="flex items-center text-gray-700">
                    <i class="fas fa-check-circle w-6 text-green-600"></i>
                    <span class="text-sm font-semibold text-green-600">Disponible</span>
                </div>
            </div>
            
            <a href="{{ path('merchant_space_reserve', {'id': space.id|bin2hex}) }}" class="block w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white text-center py-3 rounded-lg hover:from-blue-700 hover:to-purple-700 transition font-semibold">
                <i class="fas fa-calendar-plus mr-2"></i>
                Réserver cet espace
            </a>
        </div>
    </div>
    {% endfor %}
</div>
{% else %}
<div class="bg-white rounded-lg shadow-sm p-12 text-center">
    <i class="fas fa-store-slash text-gray-300 text-6xl mb-4"></i>
    <h3 class="text-2xl font-semibold text-gray-700 mb-2">Aucun espace disponible</h3>
    <p class="text-gray-500">Tous les espaces sont actuellement occupés. Revenez plus tard.</p>
</div>
{% endif %}

{% endblock %}
