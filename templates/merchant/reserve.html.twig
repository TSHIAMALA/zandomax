{% extends 'merchant/base_merchant.html.twig' %}

{% block title %}Réserver {{ space.code }} - ZANDO Market{% endblock %}

{% block content %}
<div class="container-fluid px-4 py-6">
    <!-- Header -->
    <div class="mb-6">
        <a href="{{ path('merchant_spaces') }}" class="text-purple-600 hover:text-purple-700 mb-2 inline-block">
            <i class="fas fa-arrow-left mr-2"></i>Retour aux espaces
        </a>
        <h1 class="text-3xl font-bold text-gray-800">Réserver un Espace</h1>
        <p class="text-gray-600 mt-1">Complétez le formulaire pour réserver {{ space.code }}</p>
    </div>

    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
            <p class="text-green-700">{{ message }}</p>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
            <p class="text-red-700">{{ message }}</p>
        </div>
    {% endfor %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Space Info -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm p-6 sticky top-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Détails de l'Espace</h2>
                
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-3 bg-purple-50 rounded-lg">
                        <span class="text-gray-600">Code</span>
                        <span class="font-bold text-purple-600 text-xl">{{ space.code }}</span>
                    </div>
                    
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">Zone</span>
                        <span class="font-semibold">{{ space.zone }}</span>
                    </div>
                    
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">Catégorie</span>
                        <span class="font-semibold">{{ space.spaceCategory.name }}</span>
                    </div>
                    
                    {% if space.spaceType %}
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                        <span class="text-gray-600">Type</span>
                        <span class="font-semibold">{{ space.spaceType.label }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Reservation Form -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-6">Formulaire de Réservation</h2>
                
                <form method="post" id="reservationForm">
                    <div class="space-y-6">
                        <!-- Periodicity -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Périodicité <span class="text-red-500">*</span>
                            </label>
                            <select name="periodicity" id="periodicity" required 
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500">
                                <option value="">Sélectionnez une périodicité</option>
                                {% for option in pricingOptions %}
                                <option value="{{ option.periodicity.value }}" 
                                        data-price="{{ option.price }}"
                                        data-currency="{{ option.currency }}"
                                        data-min="{{ option.min_duration }}"
                                        data-max="{{ option.max_duration }}">
                                    {{ option.periodicity.value|capitalize }} - {{ option.price }} {{ option.currency }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Duration -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                Durée <span class="text-red-500">*</span>
                            </label>
                            <input type="number" name="duration" id="duration" min="1" required
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500"
                                   placeholder="Ex: 6">
                            <p class="text-sm text-gray-500 mt-1" id="durationHint">Entrez la durée souhaitée</p>
                        </div>

                        <!-- Price Summary -->
                        <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-6 border-2 border-purple-200">
                            <h3 class="text-lg font-bold text-gray-800 mb-4">Récapitulatif</h3>
                            <div class="space-y-3">
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Prix unitaire</span>
                                    <span class="font-semibold" id="unitPrice">-</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Durée</span>
                                    <span class="font-semibold" id="durationDisplay">-</span>
                                </div>
                                <div class="border-t-2 border-purple-200 pt-3 flex justify-between items-center">
                                    <span class="text-lg font-bold text-gray-800">Total à payer</span>
                                    <span class="text-2xl font-bold text-purple-600" id="totalPrice">0 CDF</span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" id="submitBtn" disabled
                                class="w-full px-6 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg font-semibold hover:from-purple-700 hover:to-pink-700 transition transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                            <i class="fas fa-check-circle mr-2"></i>Confirmer la Réservation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
const periodicitySelect = document.getElementById('periodicity');
const durationInput = document.getElementById('duration');
const unitPriceEl = document.getElementById('unitPrice');
const durationDisplayEl = document.getElementById('durationDisplay');
const totalPriceEl = document.getElementById('totalPrice');
const durationHintEl = document.getElementById('durationHint');
const submitBtn = document.getElementById('submitBtn');

function calculateTotal() {
    const selectedOption = periodicitySelect.options[periodicitySelect.selectedIndex];
    const duration = parseInt(durationInput.value) || 0;
    
    if (!selectedOption.value || !duration) {
        totalPriceEl.textContent = '0 CDF';
        submitBtn.disabled = true;
        return;
    }
    
    const price = parseFloat(selectedOption.dataset.price);
    const currency = selectedOption.dataset.currency;
    const minDuration = parseInt(selectedOption.dataset.min);
    const maxDuration = parseInt(selectedOption.dataset.max);
    
    // Update unit price
    unitPriceEl.textContent = `${price} ${currency}`;
    durationDisplayEl.textContent = `${duration} ${selectedOption.value}(s)`;
    
    // Validate duration
    if (duration < minDuration) {
        durationHintEl.textContent = `Durée minimale: ${minDuration}`;
        durationHintEl.classList.add('text-red-500');
        submitBtn.disabled = true;
        return;
    }
    
    if (maxDuration && duration > maxDuration) {
        durationHintEl.textContent = `Durée maximale: ${maxDuration}`;
        durationHintEl.classList.add('text-red-500');
        submitBtn.disabled = true;
        return;
    }
    
    durationHintEl.textContent = 'Durée valide';
    durationHintEl.classList.remove('text-red-500');
    durationHintEl.classList.add('text-green-500');
    
    // Calculate total
    const total = price * duration;
    totalPriceEl.textContent = `${total.toFixed(2)} ${currency}`;
    submitBtn.disabled = false;
}

periodicitySelect.addEventListener('change', calculateTotal);
durationInput.addEventListener('input', calculateTotal);
</script>
{% endblock %}
