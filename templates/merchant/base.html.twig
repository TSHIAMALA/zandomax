<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Espace Marchand - ZANDO Market{% endblock %}</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-50">
    <!-- Sidebar Navigation -->
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-64 bg-gradient-to-b from-purple-600 to-purple-800 text-white flex-shrink-0">
            <div class="p-6">
                <div class="flex items-center space-x-3 mb-8">
                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-2xl">
                        üè™
                    </div>
                    <div>
                        <h1 class="text-xl font-bold">ZANDO</h1>
                        <p class="text-xs text-purple-200">Market Management</p>
                    </div>
                </div>

                <nav class="space-y-2">
                    <a href="{{ path('merchant_dashboard') }}" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white/10 transition">
                        <i class="fas fa-chart-line w-5"></i>
                        <span>Tableau de Bord</span>
                    </a>
                    
                    <a href="{{ path('merchant_spaces') }}" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white/10 transition">
                        <i class="fas fa-store w-5"></i>
                        <span>Espaces</span>
                    </a>
                    
                    <a href="{{ path('merchant_reservations') }}" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white/10 transition">
                        <i class="fas fa-calendar-check w-5"></i>
                        <span>R√©servations</span>
                    </a>
                    
                    <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white/10 transition">
                        <i class="fas fa-file-invoice w-5"></i>
                        <span>Factures</span>
                    </a>
                    
                    <a href="#" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white/10 transition">
                        <i class="fas fa-user-circle w-5"></i>
                        <span>Mon profil</span>
                    </a>
                </nav>
            </div>

            <!-- User Info at Bottom -->
            <div class="absolute bottom-0 w-64 p-6 border-t border-white/10">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium truncate">{{ app.user.merchant.firstname }}</p>
                            <p class="text-xs text-purple-200">Administrateur</p>
                        </div>
                    </div>
                    <a href="{{ path('app_logout') }}" class="text-white/70 hover:text-white" title="D√©connexion">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Bar -->
            <header class="bg-white shadow-sm z-10">
                <div class="px-6 py-4 flex items-center justify-between">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-800">{% block header %}Mon Espace Marchand{% endblock %}</h2>
                        <p class="text-sm text-gray-500">{% block subtitle %}Bienvenue {{ app.user.merchant.firstname }}{% endblock %}</p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <button class="relative p-2 text-gray-600 hover:text-gray-800">
                            <i class="fas fa-bell text-xl"></i>
                            <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"></span>
                        </button>
                        <div class="text-right">
                            <p class="text-sm font-medium text-gray-800">{{ app.user.merchant.firstname }} {{ app.user.merchant.lastname }}</p>
                            <p class="text-xs text-gray-500">{{ "now"|date("d/m/Y H:i") }}</p>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
                {% for message in app.flashes('success') %}
                    <div class="mb-4 bg-green-50 border-l-4 border-green-500 p-4 rounded-r-lg">
                        <div class="flex items-center">
                            <i class="fas fa-check-circle text-green-500 mr-3"></i>
                            <p class="text-green-700">{{ message }}</p>
                        </div>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="mb-4 bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
                            <p class="text-red-700">{{ message }}</p>
                        </div>
                    </div>
                {% endfor %}

                {% for message in app.flashes('warning') %}
                    <div class="mb-4 bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-r-lg">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-triangle text-yellow-500 mr-3"></i>
                            <p class="text-yellow-700">{{ message }}</p>
                        </div>
                    </div>
                {% endfor %}

                {% block content %}{% endblock %}
            </main>
        </div>
    </div>

    {% block javascripts %}{% endblock %}
</body>
</html>
