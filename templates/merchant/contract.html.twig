{% extends 'merchant/base_merchant.html.twig' %}

{% block title %}Mon Contrat - ZANDO Market{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">


    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="md:flex md:items-center md:justify-between mb-8">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    Mon Contrat
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Consultez et gérez votre contrat de location.
                </p>
            </div>
        </div>

        {% if contract %}
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
                    <div>
                        <h3 class="text-lg leading-6 font-medium text-gray-900">
                            Contrat #{{ contract.contractCode }}
                        </h3>
                        <p class="mt-1 max-w-2xl text-sm text-gray-500">
                            Détails et conditions.
                        </p>
                    </div>
                    <span class="px-3 py-1 rounded-full text-sm font-semibold
                        {% if contract.status.value == 'active' %}bg-green-100 text-green-800
                        {% elseif contract.status.value == 'pending_signature' %}bg-yellow-100 text-yellow-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ contract.status.value|trans }}
                    </span>
                </div>
                <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                    <dl class="sm:divide-y sm:divide-gray-200">
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Espace</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {{ contract.space.code }} ({{ contract.space.spaceType.label }})
                            </dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Période</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                Du {{ contract.startDate|date('d/m/Y') }} au {{ contract.endDate|date('d/m/Y') }}
                            </dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Loyer</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {{ contract.rentAmount }} CDF / {{ contract.billingCycle.value }}
                            </dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Garantie Locative</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {{ contract.guaranteeAmount }} CDF
                            </dd>
                        </div>
                    </dl>
                </div>
                <div class="bg-gray-50 px-4 py-4 sm:px-6 flex justify-end">
                    {% if contract.status.value == 'pending_signature' %}
                        <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                            Signer le contrat
                        </button>
                    {% else %}
                        <a href="{{ path('merchant_contract_download', {'id': contract.id|bin2hex}) }}" class="text-purple-600 hover:text-purple-900 font-medium">
                            Télécharger le PDF
                        </a>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="text-center py-12 bg-white rounded-lg shadow">
                <i class="fas fa-file-contract text-gray-300 text-5xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900">Aucun contrat actif</h3>
                <p class="mt-2 text-gray-500">Vous n'avez pas encore de contrat validé.</p>
                <div class="mt-6">
                    <a href="{{ path('merchant_spaces') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700">
                        Réserver un espace
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
