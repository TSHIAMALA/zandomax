{% extends 'merchant/base.html.twig' %}

{% block title %}Mon Contrat - ZANDO Market{% endblock %}
{% block header %}Mon Contrat{% endblock %}
{% block subtitle %}Détails de votre contrat de location{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    {% if contract %}
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white">Contrat N° {{ contract.contractCode }}</h2>
        </div>
        
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-2">Informations Marchand</h3>
                    <p class="text-lg font-semibold">{{ contract.merchant.firstname }} {{ contract.merchant.lastname }}</p>
                    <p class="text-sm text-gray-600">{{ contract.merchant.email }}</p>
                    <p class="text-sm text-gray-600">{{ contract.merchant.phone }}</p>
                </div>
                
                <div>
                    <h3 class="text-sm font-medium text-gray-500 mb-2">Espace Attribué</h3>
                    <p class="text-lg font-semibold">{{ contract.space.code }}</p>
                    <p class="text-sm text-gray-600">Zone: {{ contract.space.zone }}</p>
                    <p class="text-sm text-gray-600">Catégorie: {{ contract.space.spaceCategory.name }}</p>
                </div>
            </div>
            
            <div class="border-t border-gray-200 pt-6">
                <h3 class="text-lg font-semibold mb-4">Détails Financiers</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-gray-50 p-4 rounded">
                        <p class="text-sm text-gray-600">Loyer</p>
                        <p class="text-2xl font-bold text-indigo-600">{{ contract.rentAmount|number_format(0, ',', ' ') }} CDF</p>
                    </div>
                    <div class="bg-gray-50 p-4 rounded">
                        <p class="text-sm text-gray-600">Garantie</p>
                        <p class="text-2xl font-bold text-green-600">{{ contract.guaranteeAmount|number_format(0, ',', ' ') }} CDF</p>
                    </div>
                </div>
            </div>
            
            <div class="border-t border-gray-200 pt-6 mt-6">
                <h3 class="text-lg font-semibold mb-4">Période du Contrat</h3>
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600">Date de début</p>
                        <p class="text-lg font-semibold">{{ contract.startDate|date('d/m/Y') }}</p>
                    </div>
                    <div class="text-center">
                        <i class="fas fa-arrow-right text-gray-400 text-2xl"></i>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-600">Date de fin</p>
                        <p class="text-lg font-semibold">{{ contract.endDate|date('d/m/Y') }}</p>
                    </div>
                </div>
            </div>
            
            <div class="border-t border-gray-200 pt-6 mt-6">
                <div class="flex items-center justify-between">
                    <span class="text-lg font-semibold">Statut du Contrat</span>
                    <span class="px-4 py-2 rounded-full text-sm font-semibold
                        {% if contract.status.value == 'active' %}bg-green-100 text-green-800
                        {% elseif contract.status.value == 'pending_signature' %}bg-yellow-100 text-yellow-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ contract.status.value|upper }}
                    </span>
                </div>
            </div>
            
            <div class="mt-6 flex gap-4">
                <a href="#" class="flex-1 bg-indigo-600 text-white px-4 py-2 rounded text-center hover:bg-indigo-700">
                    <i class="fas fa-download mr-2"></i>Télécharger le Contrat PDF
                </a>
                <a href="{{ path('merchant_payments') }}" class="flex-1 bg-gray-200 text-gray-800 px-4 py-2 rounded text-center hover:bg-gray-300">
                    <i class="fas fa-credit-card mr-2"></i>Voir les Paiements
                </a>
            </div>
        </div>
    </div>
    {% else %}
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg">
        <div class="flex items-center">
            <i class="fas fa-exclamation-triangle text-yellow-400 mr-3"></i>
            <p class="text-yellow-700">Vous n'avez pas de contrat actif.</p>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
