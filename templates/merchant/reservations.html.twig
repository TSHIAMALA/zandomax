{% extends 'merchant/base.html.twig' %}

{% block title %}Mes Réservations - ZANDO Market{% endblock %}
{% block header %}Mes Réservations{% endblock %}
{% block subtitle %}Historique de vos réservations{% endblock %}

{% block content %}

<div class="mb-6">
    <a href="{{ path('merchant_dashboard') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
        <i class="fas fa-arrow-left mr-2"></i>
        Retour au dashboard
    </a>
</div>

{% if reservations|length > 0 %}
<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Espace</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Zone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date début</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date fin</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for reservation in reservations %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">{{ reservation.space.code }}</div>
                        <div class="text-sm text-gray-500">{{ reservation.space.spaceCategory.name }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ reservation.space.zone }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ reservation.startDate|date('d/m/Y') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ reservation.endDate|date('d/m/Y') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if reservation.status.value == 'confirmed' %}
                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1"></i> Confirmée
                            </span>
                        {% elseif reservation.status.value == 'pending' %}
                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                <i class="fas fa-clock mr-1"></i> En attente
                            </span>
                        {% elseif reservation.status.value == 'cancelled' %}
                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                <i class="fas fa-times-circle mr-1"></i> Annulée
                            </span>
                        {% else %}
                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                {{ reservation.status.value }}
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                        {{ reservation.totalAmount|number_format(0, ',', ' ') }} FC
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <a href="#" class="text-blue-600 hover:text-blue-900 mr-3">
                            <i class="fas fa-eye"></i> Détails
                        </a>
                        {% if reservation.status.value == 'pending' %}
                        <a href="#" class="text-green-600 hover:text-green-900">
                            <i class="fas fa-credit-card"></i> Payer
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% else %}
<div class="bg-white rounded-lg shadow-sm p-12 text-center">
    <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
    <h3 class="text-2xl font-semibold text-gray-700 mb-2">Aucune réservation</h3>
    <p class="text-gray-500 mb-6">Vous n'avez pas encore effectué de réservation</p>
    <a href="{{ path('merchant_spaces') }}" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold">
        <i class="fas fa-plus mr-2"></i>
        Faire une réservation
    </a>
</div>
{% endif %}

{% endblock %}
