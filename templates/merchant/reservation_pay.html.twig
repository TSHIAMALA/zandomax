{% extends 'merchant/base.html.twig' %}

{% block title %}Payer la r√©servation - ZANDO Market{% endblock %}
{% block header %}Paiement de la R√©servation{% endblock %}
{% block subtitle %}{{ reservation.space.code }} - {{ reservation.space.zone }}{% endblock %}

{% block content %}

<div class="mb-6">
    <a href="{{ path('merchant_reservations') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
        <i class="fas fa-arrow-left mr-2"></i>
        Retour aux r√©servations
    </a>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- R√©sum√© de la r√©servation -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4">
                <i class="fas fa-receipt mr-2 text-blue-600"></i>
                R√©sum√©
            </h3>
            
            <div class="space-y-4">
                <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-4 rounded-lg text-white">
                    <p class="text-sm opacity-80">Espace</p>
                    <p class="text-xl font-bold">{{ reservation.space.code }}</p>
                    <p class="text-sm opacity-80">{{ reservation.space.zone }}</p>
                </div>
                
                <div class="border-t pt-4 space-y-3">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">P√©riodicit√©</span>
                        <span class="font-medium">{{ reservation.periodicity.label }}</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Dur√©e</span>
                        <span class="font-medium">{{ reservation.duration }} p√©riode(s)</span>
                    </div>
                    {% if reservation.unitPrice %}
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Prix unitaire</span>
                        <span class="font-medium">{{ reservation.unitPrice|number_format(0, ',', ' ') }} {{ reservation.currency.code ?? 'CDF' }}</span>
                    </div>
                    {% endif %}
                </div>
                
                <div class="border-t pt-4">
                    <div class="flex justify-between items-center">
                        <span class="text-lg font-bold text-gray-800">Total √† payer</span>
                        <span class="text-2xl font-bold text-green-600">
                            {{ reservation.firstPaymentAmount|number_format(0, ',', ' ') }} {{ reservation.currency.code ?? 'CDF' }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de paiement -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">
                <i class="fas fa-credit-card mr-2 text-green-600"></i>
                Effectuer le paiement
            </h3>
            
            <form method="post" action="{{ path('merchant_reservation_pay_process', {'id': reservation.id|bin2hex}) }}" class="space-y-6">
                <!-- Moyen de paiement -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">
                        Choisissez votre moyen de paiement
                    </label>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="payment_method" value="cash" class="hidden peer" {% if reservation.paymentMethod and reservation.paymentMethod.value == 'cash' %}checked{% endif %}>
                            <div class="border-2 border-gray-200 rounded-lg p-4 text-center hover:border-blue-500 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition">
                                <div class="text-3xl mb-2">üíµ</div>
                                <p class="font-medium text-sm">Esp√®ces</p>
                            </div>
                        </label>
                        
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="payment_method" value="airtel_money" class="hidden peer" {% if reservation.paymentMethod and reservation.paymentMethod.value == 'airtel_money' %}checked{% endif %}>
                            <div class="border-2 border-gray-200 rounded-lg p-4 text-center hover:border-blue-500 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition">
                                <div class="text-3xl mb-2">üì±</div>
                                <p class="font-medium text-sm">Airtel Money</p>
                            </div>
                        </label>
                        
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="payment_method" value="mpesa" class="hidden peer" {% if reservation.paymentMethod and reservation.paymentMethod.value == 'mpesa' %}checked{% endif %}>
                            <div class="border-2 border-gray-200 rounded-lg p-4 text-center hover:border-blue-500 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition">
                                <div class="text-3xl mb-2">üì±</div>
                                <p class="font-medium text-sm">M-Pesa</p>
                            </div>
                        </label>
                        
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="payment_method" value="orange_money" class="hidden peer" {% if reservation.paymentMethod and reservation.paymentMethod.value == 'orange_money' %}checked{% endif %}>
                            <div class="border-2 border-gray-200 rounded-lg p-4 text-center hover:border-blue-500 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition">
                                <div class="text-3xl mb-2">üì±</div>
                                <p class="font-medium text-sm">Orange Money</p>
                            </div>
                        </label>
                        
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="payment_method" value="bank_transfer" class="hidden peer" {% if reservation.paymentMethod and reservation.paymentMethod.value == 'bank_transfer' %}checked{% endif %}>
                            <div class="border-2 border-gray-200 rounded-lg p-4 text-center hover:border-blue-500 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition">
                                <div class="text-3xl mb-2">üè¶</div>
                                <p class="font-medium text-sm">Virement</p>
                            </div>
                        </label>
                        
                        <label class="payment-option cursor-pointer">
                            <input type="radio" name="payment_method" value="credit_card" class="hidden peer" {% if reservation.paymentMethod and reservation.paymentMethod.value == 'credit_card' %}checked{% endif %}>
                            <div class="border-2 border-gray-200 rounded-lg p-4 text-center hover:border-blue-500 peer-checked:border-blue-500 peer-checked:bg-blue-50 transition">
                                <div class="text-3xl mb-2">üí≥</div>
                                <p class="font-medium text-sm">Carte</p>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Instructions de paiement -->
                <div id="paymentInstructions" class="bg-gray-50 rounded-lg p-4">
                    <h4 class="font-semibold text-gray-800 mb-2">
                        <i class="fas fa-info-circle mr-2 text-blue-600"></i>
                        Instructions de paiement
                    </h4>
                    <div id="cashInstructions" class="payment-instructions hidden">
                        <p class="text-sm text-gray-600">Rendez-vous au bureau de l'administration du march√© pour effectuer votre paiement en esp√®ces.</p>
                    </div>
                    <div id="mobileInstructions" class="payment-instructions hidden">
                        <p class="text-sm text-gray-600 mb-2">Envoyez le montant au num√©ro suivant :</p>
                        <p class="text-lg font-bold text-gray-800">+243 XXX XXX XXX</p>
                        <p class="text-sm text-gray-600 mt-2">Entrez la r√©f√©rence de transaction ci-dessous apr√®s le paiement.</p>
                    </div>
                    <div id="bankInstructions" class="payment-instructions hidden">
                        <p class="text-sm text-gray-600 mb-2">Effectuez un virement vers :</p>
                        <p class="text-sm"><strong>Banque:</strong> Rawbank</p>
                        <p class="text-sm"><strong>Compte:</strong> XXXX-XXXX-XXXX</p>
                        <p class="text-sm"><strong>R√©f√©rence:</strong> RES-{{ reservation.id|bin2hex|slice(0, 8)|upper }}</p>
                    </div>
                    <div id="defaultInstructions" class="payment-instructions">
                        <p class="text-sm text-gray-600">S√©lectionnez un moyen de paiement pour voir les instructions.</p>
                    </div>
                </div>

                <!-- R√©f√©rence de transaction -->
                <div id="transactionRefField" class="hidden">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-hashtag mr-2 text-gray-600"></i>
                        R√©f√©rence de transaction (optionnel)
                    </label>
                    <input type="text" name="transaction_ref" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="Ex: TXN123456789">
                    <p class="text-xs text-gray-500 mt-1">Entrez la r√©f√©rence de votre transaction mobile money ou virement</p>
                </div>

                <!-- Boutons d'action -->
                <div class="flex items-center justify-between pt-4 border-t">
                    <a href="{{ path('merchant_reservations') }}" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition">
                        <i class="fas fa-times mr-2"></i>
                        Annuler
                    </a>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-700 hover:to-green-800 transition font-semibold">
                        <i class="fas fa-check mr-2"></i>
                        Confirmer le paiement
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const paymentOptions = document.querySelectorAll('input[name="payment_method"]');
    const transactionRefField = document.getElementById('transactionRefField');
    const allInstructions = document.querySelectorAll('.payment-instructions');
    
    function updateInstructions() {
        const selected = document.querySelector('input[name="payment_method"]:checked');
        
        // Cacher toutes les instructions
        allInstructions.forEach(el => el.classList.add('hidden'));
        
        if (selected) {
            const value = selected.value;
            
            if (value === 'cash') {
                document.getElementById('cashInstructions').classList.remove('hidden');
                transactionRefField.classList.add('hidden');
            } else if (['airtel_money', 'mpesa', 'orange_money'].includes(value)) {
                document.getElementById('mobileInstructions').classList.remove('hidden');
                transactionRefField.classList.remove('hidden');
            } else if (value === 'bank_transfer') {
                document.getElementById('bankInstructions').classList.remove('hidden');
                transactionRefField.classList.remove('hidden');
            } else {
                document.getElementById('defaultInstructions').classList.remove('hidden');
                transactionRefField.classList.add('hidden');
            }
        } else {
            document.getElementById('defaultInstructions').classList.remove('hidden');
            transactionRefField.classList.add('hidden');
        }
    }
    
    paymentOptions.forEach(option => {
        option.addEventListener('change', updateInstructions);
    });
    
    // Initial check
    updateInstructions();
});
</script>

{% endblock %}
