{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord - ZANDO Market{% endblock %}
{% block header %}Tableau de Bord{% endblock %}
{% block subtitle %}Vue d'ensemble de votre marché{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stat-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }
    </style>
{% endblock %}

{% block content %}
<!-- Stats Cards Compactes -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-3 mb-5">
    <!-- Card 1: Commandes Enregistrées -->
    <a href="{{ path('market_admin_contracts_index') }}" class="stat-card bg-gradient-to-br from-slate-700 to-slate-800 rounded-lg shadow-sm p-3 text-white block">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-xs text-gray-300 mb-1">Commandes Enregistrées</h3>
                <p class="text-2xl font-bold text-yellow-400">{{ stats.merchants.total|default('10') }}</p>
                <p class="text-xs text-gray-400 mt-0.5">Total marchands</p>
            </div>
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                <i class="fas fa-users text-lg"></i>
            </div>
        </div>
    </a>

    <!-- Card 2: Commandes Annulées -->
    <a href="{{ path('market_admin_spaces_index') }}" class="stat-card bg-gradient-to-br from-blue-400 to-blue-500 rounded-lg shadow-sm p-3 text-white block">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-xs text-blue-100 mb-1">Commandes Annulées</h3>
                <p class="text-2xl font-bold">{{ stats.spaces.available|default('1') }}</p>
                <p class="text-xs text-blue-100 mt-0.5">Espaces disponibles</p>
            </div>
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                <i class="fas fa-calendar-times text-lg"></i>
            </div>
        </div>
    </a>

    <!-- Card 3: Commandes Faites -->
    <a href="{{ path('market_admin_payments_index') }}" class="stat-card bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-sm p-3 text-white block">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-xs text-green-100 mb-1">Commandes Faites</h3>
                <p class="text-2xl font-bold">{{ stats.contracts.active|default('1') }}</p>
                <p class="text-xs text-green-100 mt-0.5">Contrats actifs</p>
            </div>
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                <i class="fas fa-check-circle text-lg"></i>
            </div>
        </div>
    </a>

    <!-- Card 4: Dépenses Totales -->
    <a href="{{ path('market_admin_invoices_index') }}" class="stat-card bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-sm p-3 text-white block">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h3 class="text-xs text-blue-100 mb-1">Dépenses Totales</h3>
                <p class="text-2xl font-bold">128,000</p>
                <p class="text-xs text-blue-100 mt-0.5">CDF ce mois</p>
            </div>
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                <i class="fas fa-money-bill-wave text-lg"></i>
            </div>
        </div>
    </a>
</div>

<!-- Graphiques Section -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mb-6">
    <!-- Graphique Répartition des Espaces (Camembert) -->
    <div class="bg-white rounded-xl shadow-md p-5">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Répartition des Espaces</h3>
        <div class="flex justify-center">
            <canvas id="spacesChart" style="max-height: 200px;"></canvas>
        </div>
    </div>

    <!-- Graphique Revenus Mensuels (Barres) -->
    <div class="bg-white rounded-xl shadow-md p-5">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Revenus Mensuels</h3>
        <canvas id="revenueChart" style="max-height: 200px;"></canvas>
    </div>

    <!-- Activités Récentes -->
    <div class="bg-white rounded-xl shadow-md p-5">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Activités Récentes</h3>
        <div class="space-y-3">
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-user-plus text-blue-600 text-sm"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-800">Nouveau marchand</p>
                    <p class="text-xs text-gray-500">Il y a 2 heures</p>
                </div>
            </div>
            
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-check text-green-600 text-sm"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-800">Paiement validé</p>
                    <p class="text-xs text-gray-500">Il y a 3 heures</p>
                </div>
            </div>
            
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-file-contract text-purple-600 text-sm"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-800">Contrat signé</p>
                    <p class="text-xs text-gray-500">Il y a 5 heures</p>
                </div>
            </div>
            
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-store text-orange-600 text-sm"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-800">Espace libéré</p>
                    <p class="text-xs text-gray-500">Il y a 1 jour</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Section Accès Rapides -->
<div class="bg-white rounded-xl shadow-md p-5">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Accès Rapides</h2>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <!-- Contrats -->
        <a href="{{ path('market_admin_contracts_index') }}" class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-blue-300 transition">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-file-contract text-green-600"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 text-sm">Contrats</h3>
                    <p class="text-xs text-gray-500">Gérer les contrats</p>
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <span class="px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">{{ stats.contracts.active }}</span>
                <i class="fas fa-arrow-right text-gray-400"></i>
            </div>
        </a>

        <!-- Réservations -->
        <a href="{{ path('market_admin_reservations_index') }}" class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-blue-300 transition">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-calendar-check text-blue-600"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 text-sm">Réservations</h3>
                    <p class="text-xs text-gray-500">Valider les demandes</p>
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <i class="fas fa-arrow-right text-gray-400"></i>
            </div>
        </a>

        <!-- Paiements -->
        <a href="{{ path('market_admin_payments_index') }}" class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-blue-300 transition">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-credit-card text-purple-600"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 text-sm">Paiements</h3>
                    <p class="text-xs text-gray-500">Suivre les paiements</p>
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <span class="px-2 py-1 bg-yellow-100 text-yellow-700 rounded-full text-xs font-medium">{{ stats.payments.pending }}</span>
                <i class="fas fa-arrow-right text-gray-400"></i>
            </div>
        </a>

        <!-- Factures -->
        <a href="{{ path('market_admin_invoices_index') }}" class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 hover:border-blue-300 transition">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-file-invoice text-orange-600"></i>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 text-sm">Factures</h3>
                    <p class="text-xs text-gray-500">Gérer les factures</p>
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <i class="fas fa-arrow-right text-gray-400"></i>
            </div>
        </a>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Configuration commune
    Chart.defaults.font.family = 'Inter';
    Chart.defaults.color = '#6B7280';
    Chart.defaults.font.size = 11;

    // Graphique Camembert - Répartition des Espaces
    const spacesCtx = document.getElementById('spacesChart');
    if (spacesCtx) {
        new Chart(spacesCtx.getContext('2d'), {
    type: 'doughnut',
    data: {
        labels: ['Occupés', 'Disponibles', 'Maintenance'],
        datasets: [{
            data: [{{ stats.spaces.occupied|default('8') }}, {{ stats.spaces.available|default('1') }}, 1],
            backgroundColor: [
                'rgba(59, 130, 246, 0.8)',
                'rgba(34, 197, 94, 0.8)',
                'rgba(251, 146, 60, 0.8)'
            ],
            borderWidth: 0,
            hoverOffset: 10
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
            legend: {
                position: 'bottom',
                labels: {
                    padding: 10,
                    usePointStyle: true,
                    font: {
                        size: 11,
                        weight: '500'
                    }
                }
            },
            tooltip: {
                backgroundColor: 'rgba(0, 0, 0, 0.8)',
                padding: 8,
                cornerRadius: 6,
                titleFont: {
                    size: 12,
                    weight: 'bold'
                },
                bodyFont: {
                    size: 11
                }
            }
        },
        cutout: '65%'
    }
});
    } // Fin du if spacesCtx

    // Graphique Barres - Revenus Mensuels
    const revenueCtx = document.getElementById('revenueChart');
    if (revenueCtx) {
        new Chart(revenueCtx.getContext('2d'), {
            type: 'bar',
            data: {
                labels: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin'],
                datasets: [{
                    label: 'Revenus (CDF)',
                    data: [85000, 92000, 78000, 105000, 128000, 115000],
                    backgroundColor: 'rgba(59, 130, 246, 0.8)',
                    borderRadius: 6,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 8,
                        cornerRadius: 6,
                        displayColors: false,
                        titleFont: {
                            size: 11
                        },
                        bodyFont: {
                            size: 11
                        },
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y.toLocaleString() + ' CDF';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)',
                            drawBorder: false
                        },
                        ticks: {
                            padding: 8,
                            font: {
                                size: 10
                            },
                            callback: function(value) {
                                return (value / 1000) + 'K';
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            padding: 8,
                            font: {
                                size: 10
                            }
                        }
                    }
                }
            }
        });
    } // Fin du if revenueCtx
}); // Fin du DOMContentLoaded
</script>
{% endblock %}
