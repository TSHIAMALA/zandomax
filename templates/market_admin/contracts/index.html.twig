{% extends 'base.html.twig' %}

{% block title %}Contrats - ZANDO Market{% endblock %}
{% block header %}Gestion des Contrats{% endblock %}
{% block subtitle %}Gérez les contrats des marchands{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow-sm p-4 mb-4">
    <form method="get" class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
            <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                <option value="">Tous</option>
                <option value="active" {% if filters.status == 'active' %}selected{% endif %}>Actif</option>
                <option value="pending_signature" {% if filters.status == 'pending_signature' %}selected{% endif %}>En attente de signature</option>
                <option value="expired" {% if filters.status == 'expired' %}selected{% endif %}>Expiré</option>
                <option value="terminated" {% if filters.status == 'terminated' %}selected{% endif %}>Résilié</option>
            </select>
        </div>
        <div class="flex items-end">
            <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 text-sm font-medium">
                <i class="fas fa-search mr-2"></i>Filtrer
            </button>
        </div>
    </form>
</div>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Code Contrat</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Marchand</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Emplacement</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dates</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for contract in contracts %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm font-medium text-purple-600">{{ contract.contractCode }}</td>
                <td class="px-4 py-3 text-sm text-gray-900">{{ contract.merchant.firstname }} {{ contract.merchant.lastname }}</td>
                <td class="px-4 py-3 text-sm text-gray-500">{{ contract.space.code }} ({{ contract.space.zone }})</td>
                <td class="px-4 py-3">
                    {% if contract.status.value == 'active' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Actif</span>
                    {% elseif contract.status.value == 'pending_signature' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente</span>
                    {% elseif contract.status.value == 'expired' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Expiré</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">{{ contract.status.value|title }}</span>
                    {% endif %}
                </td>
                <td class="px-4 py-3 text-sm text-gray-500">{{ contract.startDate|date('Y-m-d') }} - {{ contract.endDate|date('Y-m-d') }}</td>
                <td class="px-4 py-3 text-right text-sm">
                    <a href="{{ path('market_admin_contracts_show', {id: contract.id|bin2hex}) }}" class="text-purple-600 hover:text-purple-900 font-medium">Voir</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="px-4 py-8 text-center text-sm text-gray-500">Aucun contrat trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% if totalPages > 1 %}
<div class="mt-4 flex justify-between items-center">
    <div class="text-sm text-gray-700">Page {{ currentPage }} sur {{ totalPages }}</div>
    <div class="flex space-x-2">
        {% if currentPage > 1 %}
            <a href="?page={{ currentPage - 1 }}{% if filters.status %}&status={{ filters.status }}{% endif %}" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50">Précédent</a>
        {% endif %}
        {% if currentPage < totalPages %}
            <a href="?page={{ currentPage + 1 }}{% if filters.status %}&status={{ filters.status }}{% endif %}" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50">Suivant</a>
        {% endif %}
    </div>
</div>
{% endif %}
{% endblock %}
