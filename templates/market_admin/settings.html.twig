{% extends 'base.html.twig' %}

{% block title %}Paramètres - ZANDO Market{% endblock %}

{% block header %}Paramètres{% endblock %}
{% block subtitle %}Gérez les paramètres de votre plateforme{% endblock %}

{% block content %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Sidebar des paramètres -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm p-6 sticky top-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Catégories</h3>
            <nav class="space-y-2">
                <a href="#general" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-purple-50 text-purple-700 font-medium">
                    <i class="fas fa-cog"></i>
                    <span>Général</span>
                </a>
                <a href="#users" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-50 text-gray-700">
                    <i class="fas fa-users"></i>
                    <span>Utilisateurs</span>
                </a>
                <a href="#notifications" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-50 text-gray-700">
                    <i class="fas fa-bell"></i>
                    <span>Notifications</span>
                </a>
                <a href="#security" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-50 text-gray-700">
                    <i class="fas fa-shield-alt"></i>
                    <span>Sécurité</span>
                </a>
                <a href="#payment" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-gray-50 text-gray-700">
                    <i class="fas fa-credit-card"></i>
                    <span>Paiements</span>
                </a>
            </nav>
        </div>
    </div>

    <!-- Contenu des paramètres -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Paramètres Généraux -->
        <div id="general" class="bg-white rounded-xl shadow-sm p-6 scroll-mt-6">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h3 class="text-xl font-bold text-gray-800">Paramètres Généraux</h3>
                    <p class="text-sm text-gray-500 mt-1">Configuration de base de la plateforme</p>
                </div>
                <button class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                    <i class="fas fa-save mr-2"></i>Enregistrer
                </button>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Nom du marché</label>
                    <input type="text" value="ZANDO Market" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email de contact</label>
                    <input type="email" value="contact@zandomarket.com" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Téléphone</label>
                    <input type="tel" value="+243 XX XXX XXXX" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Adresse</label>
                    <textarea rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">Kinshasa, RDC</textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Fuseau horaire</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        <option>Africa/Kinshasa</option>
                        <option>Africa/Lubumbashi</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Devise</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        <option>CDF - Franc Congolais</option>
                        <option>USD - Dollar Américain</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Paramètres Utilisateurs -->
        <div id="users" class="bg-white rounded-xl shadow-sm p-6 scroll-mt-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">Gestion des Utilisateurs</h3>
            <p class="text-sm text-gray-500 mb-4">Gérez les utilisateurs et leurs permissions</p>
            <div class="space-y-3">
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="font-medium text-gray-800">Nombre total d'utilisateurs</p>
                    <p class="text-2xl font-bold text-purple-600 mt-2">3</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="font-medium text-gray-800">Administrateurs</p>
                    <p class="text-2xl font-bold text-blue-600 mt-2">1</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="font-medium text-gray-800">Marchands</p>
                    <p class="text-2xl font-bold text-green-600 mt-2">2</p>
                </div>
            </div>
        </div>

        <!-- Paramètres de Notification -->
        <div id="notifications" class="bg-white rounded-xl shadow-sm p-6 scroll-mt-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">Notifications</h3>
            
            <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <p class="font-medium text-gray-800">Notifications par email</p>
                        <p class="text-sm text-gray-500">Recevoir des notifications par email</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                    </label>
                </div>

                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <p class="font-medium text-gray-800">Notifications de paiement</p>
                        <p class="text-sm text-gray-500">Alertes pour les nouveaux paiements</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                    </label>
                </div>

                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <p class="font-medium text-gray-800">Nouveaux marchands</p>
                        <p class="text-sm text-gray-500">Alertes pour les nouvelles inscriptions</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                    </label>
                </div>

                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <p class="font-medium text-gray-800">Contrats expirés</p>
                        <p class="text-sm text-gray-500">Alertes pour les contrats arrivant à expiration</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                    </label>
                </div>
            </div>
        </div>

        <!-- Paramètres Sécurité -->
        <div id="security" class="bg-white rounded-xl shadow-sm p-6 scroll-mt-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">Sécurité</h3>
            <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <p class="font-medium text-gray-800">Authentification à deux facteurs</p>
                        <p class="text-sm text-gray-500">Sécurité renforcée pour les connexions</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                    </label>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div>
                        <p class="font-medium text-gray-800">Expiration de session</p>
                        <p class="text-sm text-gray-500">Déconnexion automatique après inactivité</p>
                    </div>
                    <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm">
                        <option>30 minutes</option>
                        <option>1 heure</option>
                        <option>2 heures</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Paramètres Paiements -->
        <div id="payment" class="bg-white rounded-xl shadow-sm p-6 scroll-mt-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">Configuration des Paiements</h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Devise par défaut</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        <option>CDF - Franc Congolais</option>
                        <option>USD - Dollar Américain</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Méthodes de paiement acceptées</label>
                    <div class="space-y-2">
                        <label class="flex items-center">
                            <input type="checkbox" checked class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
                            <span class="ml-2 text-sm text-gray-700">Espèces</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" checked class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
                            <span class="ml-2 text-sm text-gray-700">Mobile Money</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
                            <span class="ml-2 text-sm text-gray-700">Carte bancaire</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informations système -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-6">Informations Système</h3>
            
            <div class="grid grid-cols-2 gap-4">
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="text-sm text-gray-500">Version</p>
                    <p class="text-lg font-semibold text-gray-800">1.0.0</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="text-sm text-gray-500">Symfony</p>
                    <p class="text-lg font-semibold text-gray-800">7.0</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="text-sm text-gray-500">PHP</p>
                    <p class="text-lg font-semibold text-gray-800">{{ constant('PHP_VERSION') }}</p>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="text-sm text-gray-500">Base de données</p>
                    <p class="text-lg font-semibold text-gray-800">MySQL</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
