{% extends 'base.html.twig' %}

{% block title %}Paiements - ZANDO Market{% endblock %}
{% block header %}Gestion des Paiements{% endblock %}
{% block subtitle %}Suivez et gérez les paiements des marchands{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow-sm p-4 mb-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div class="bg-green-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-green-700">Total Collecté</div>
            <div class="text-2xl font-bold text-green-900">{{ summary.totalCollected }} CDF</div>
        </div>
        <div class="bg-yellow-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-yellow-700">Montant en attente</div>
            <div class="text-2xl font-bold text-yellow-900">{{ summary.pending }} CDF</div>
        </div>
    </div>
    
    <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-3">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
            <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                <option value="">Tous</option>
                <option value="completed" {% if filters.status == 'completed' %}selected{% endif %}>Terminé</option>
                <option value="pending" {% if filters.status == 'pending' %}selected{% endif %}>En attente</option>
                <option value="failed" {% if filters.status == 'failed' %}selected{% endif %}>Échoué</option>
            </select>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Type</label>
            <select name="type" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                <option value="">Tous</option>
                <option value="rent" {% if filters.type == 'rent' %}selected{% endif %}>Loyer</option>
                <option value="guarantee" {% if filters.type == 'guarantee' %}selected{% endif %}>Garantie</option>
                <option value="penalty" {% if filters.type == 'penalty' %}selected{% endif %}>Pénalité</option>
            </select>
        </div>
        <div class="flex items-end">
            <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 text-sm font-medium">
                <i class="fas fa-search mr-2"></i>Filtrer
            </button>
        </div>
    </form>
</div>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Marchand</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for payment in payments %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm text-gray-500">{{ payment.createdAt|date('Y-m-d H:i') }}</td>
                <td class="px-4 py-3 text-sm text-gray-900">{{ payment.merchant.firstname }} {{ payment.merchant.lastname }}</td>
                <td class="px-4 py-3 text-sm text-gray-900">{{ payment.type.value|title }}</td>
                <td class="px-4 py-3 text-sm font-medium text-gray-900">{{ payment.amount }} {{ payment.currency }}</td>
                <td class="px-4 py-3">
                    {% if payment.status.value == 'completed' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Terminé</span>
                    {% elseif payment.status.value == 'pending' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente</span>
                    {% elseif payment.status.value == 'failed' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Échoué</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">{{ payment.status.value|title }}</span>
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="px-4 py-8 text-center text-sm text-gray-500">Aucun paiement trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% if totalPages > 1 %}
<div class="mt-4 flex justify-between items-center">
    <div class="text-sm text-gray-700">Page {{ currentPage }} sur {{ totalPages }}</div>
    <div class="flex space-x-2">
        {% if currentPage > 1 %}
            <a href="?page={{ currentPage - 1 }}{% if filters.status %}&status={{ filters.status }}{% endif %}{% if filters.type %}&type={{ filters.type }}{% endif %}" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50">Précédent</a>
        {% endif %}
        {% if currentPage < totalPages %}
            <a href="?page={{ currentPage + 1 }}{% if filters.status %}&status={{ filters.status }}{% endif %}{% if filters.type %}&type={{ filters.type }}{% endif %}" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50">Suivant</a>
        {% endif %}
    </div>
</div>
{% endif %}
{% endblock %}
