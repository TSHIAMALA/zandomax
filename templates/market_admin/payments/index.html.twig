{% extends 'base.html.twig' %}

{% block title %}Gestion des Paiements{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-100">
    {% include 'market_admin/_nav.html.twig' %}

    <div class="py-10">
        <header>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold leading-tight text-gray-900">Paiements</h1>
            </div>
        </header>
        <main>
            <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
                <!-- Summary Stats -->
                <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Collecté</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900">{{ summary.totalCollected }} CDF</dd>
                        </div>
                    </div>
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="px-4 py-5 sm:p-6">
                            <dt class="text-sm font-medium text-gray-500 truncate">Montant en attente</dt>
                            <dd class="mt-1 text-3xl font-semibold text-gray-900">{{ summary.pending }} CDF</dd>
                        </div>
                    </div>
                </div>

                <!-- Filtres -->
                <div class="mt-8 bg-white shadow rounded-lg p-6">
                    <form method="get" class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                        <div>
                            <label for="status" class="block text-sm font-medium text-gray-700">Statut</label>
                            <select id="status" name="status" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                <option value="">Tous</option>
                                <option value="completed" {% if filters.status == 'completed' %}selected{% endif %}>Terminé</option>
                                <option value="pending" {% if filters.status == 'pending' %}selected{% endif %}>En attente</option>
                                <option value="failed" {% if filters.status == 'failed' %}selected{% endif %}>Échoué</option>
                            </select>
                        </div>
                        <div>
                            <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
                            <select id="type" name="type" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                                <option value="">Tous</option>
                                <option value="rent" {% if filters.type == 'rent' %}selected{% endif %}>Loyer</option>
                                <option value="guarantee" {% if filters.type == 'guarantee' %}selected{% endif %}>Garantie</option>
                                <option value="penalty" {% if filters.type == 'penalty' %}selected{% endif %}>Pénalité</option>
                            </select>
                        </div>
                        <div class="flex items-end">
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Filtrer
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Payments Table -->
                <div class="mt-8 flex flex-col">
                    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Marchand</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        {% for payment in payments %}
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                {{ payment.createdAt|date('Y-m-d H:i') }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="text-sm font-medium text-gray-900">{{ payment.merchant.firstname }} {{ payment.merchant.lastname }}</div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                {{ payment.type.value|title }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                {{ payment.amount }} {{ payment.currency }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                {% if payment.status.value == 'completed' %}
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Terminé</span>
                                                {% elseif payment.status.value == 'pending' %}
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente</span>
                                                {% elseif payment.status.value == 'failed' %}
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Échoué</span>
                                                {% else %}
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">{{ payment.status.value|title }}</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        {% else %}
                                        <tr>
                                            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Aucun paiement trouvé</td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                <div class="mt-6 flex justify-between items-center">
                    <div class="text-sm text-gray-700">
                        Page {{ currentPage }} sur {{ totalPages }}
                    </div>
                    <div class="flex space-x-2">
                        {% if currentPage > 1 %}
                            <a href="?page={{ currentPage - 1 }}{% if filters.status %}&status={{ filters.status }}{% endif %}{% if filters.type %}&type={{ filters.type }}{% endif %}" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">Précédent</a>
                        {% endif %}
                        {% if currentPage < totalPages %}
                            <a href="?page={{ currentPage + 1 }}{% if filters.status %}&status={{ filters.status }}{% endif %}{% if filters.type %}&type={{ filters.type }}{% endif %}" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">Suivant</a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
        </main>
    </div>
</div>
{% endblock %}
