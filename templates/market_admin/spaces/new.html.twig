{% extends 'base.html.twig' %}

{% block title %}Nouvel Espace - ZANDO Market{% endblock %}
{% block header %}Dashboard{% endblock %}
{% block subtitle %}Vue d'ensemble de votre marché{% endblock %}

{% block content %}
<div class="bg-gray-50 -m-8 p-8 min-h-screen">
    <div class="max-w-4xl mx-auto">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Créer un Nouvel Espace</h1>
            <p class="text-gray-500 text-sm">Ajoutez un nouvel espace à votre marché</p>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="mb-6">
                <div class="flex items-center gap-2 mb-4">
                    <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-info-circle text-purple-600"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800">Informations de base</h3>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Code de l'espace</label>
                        {{ form_widget(form.code, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent', 'placeholder': 'ex: A-001'}}) }}
                        <p class="mt-1 text-xs text-gray-500">ex: A-001</p>
                        {{ form_errors(form.code) }}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Zone</label>
                        {{ form_widget(form.zone, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent', 'placeholder': 'Zone A'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Zone A</p>
                        {{ form_errors(form.zone) }}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Catégorie</label>
                        {{ form_widget(form.spaceCategory, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Sélectionnez une catégorie</p>
                        {{ form_errors(form.spaceCategory) }}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                        {{ form_widget(form.spaceType, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Sélectionnez un type</p>
                        {{ form_errors(form.spaceType) }}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
                        {{ form_widget(form.status, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Disponible</p>
                        {{ form_errors(form.status) }}
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between pt-6 border-t">
                <a href="{{ path('market_admin_spaces_index') }}" class="px-6 py-3 text-gray-600 hover:text-gray-900 font-medium">
                    <i class="fas fa-times mr-2"></i>Annuler
                </a>
                <button type="submit" class="px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-semibold transition shadow-sm">
                    <i class="fas fa-save mr-2"></i>Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
