{% extends 'base.html.twig' %}

{% block title %}Médias - {{ space.code }} - ZANDO Market{% endblock %}
{% block header %}Médias de l'Espace {{ space.code }}{% endblock %}
{% block subtitle %}Gérez les photos et vidéos de cet espace{% endblock %}

{% block content %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <!-- Formulaire d'upload -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm p-4">
            <h3 class="text-lg font-bold text-gray-800 mb-4">
                <i class="fas fa-cloud-upload-alt mr-2 text-purple-600"></i>Ajouter un Média
            </h3>
            
            <form method="post" action="{{ path('market_admin_space_media_upload', {spaceId: space.id|bin2hex}) }}" enctype="multipart/form-data" class="space-y-3">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Fichier</label>
                    <input type="file" name="file" accept="image/*,video/*" required 
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm">
                    <p class="text-xs text-gray-500 mt-1">Images ou vidéos acceptées</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea name="description" rows="3" 
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm"
                              placeholder="Description du média..."></textarea>
                </div>

                <button type="submit" class="w-full px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-medium">
                    <i class="fas fa-upload mr-2"></i>Uploader
                </button>
            </form>
        </div>

        <div class="mt-4">
            <a href="{{ path('market_admin_spaces_edit', {id: space.id|bin2hex}) }}" class="text-purple-600 hover:text-purple-800 font-medium text-sm">
                <i class="fas fa-arrow-left mr-2"></i>Retour à l'espace
            </a>
        </div>
    </div>

    <!-- Galerie de médias -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm p-4">
            <h3 class="text-lg font-bold text-gray-800 mb-4">
                <i class="fas fa-images mr-2 text-purple-600"></i>Galerie ({{ medias|length }})
            </h3>

            {% if medias is empty %}
            <div class="text-center py-8 text-gray-500">
                <i class="fas fa-image text-4xl mb-2"></i>
                <p>Aucun média</p>
            </div>
            {% else %}
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                {% for media in medias %}
                <div class="relative group">
                    {% if media.mediaType == 'IMAGE' %}
                        <img src="{{ media.filePath }}" alt="{{ media.description }}" class="w-full h-32 object-cover rounded-lg">
                    {% else %}
                        <div class="w-full h-32 bg-gray-200 rounded-lg flex items-center justify-center">
                            <i class="fas fa-video text-4xl text-gray-400"></i>
                        </div>
                    {% endif %}
                    
                    {% if media.isPrimary %}
                        <span class="absolute top-2 left-2 px-2 py-1 bg-green-500 text-white text-xs rounded">Principal</span>
                    {% endif %}

                    <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition rounded-lg flex items-center justify-center space-x-2">
                        <form method="post" action="{{ path('market_admin_space_media_set_primary', {spaceId: space.id|bin2hex, id: media.id|bin2hex}) }}" class="inline">
                            <button type="submit" class="px-2 py-1 bg-green-600 text-white text-xs rounded hover:bg-green-700">
                                <i class="fas fa-star"></i>
                            </button>
                        </form>
                        <form method="post" action="{{ path('market_admin_space_media_delete', {spaceId: space.id|bin2hex, id: media.id|bin2hex}) }}" onsubmit="return confirm('Supprimer ?')" class="inline">
                            <button type="submit" class="px-2 py-1 bg-red-600 text-white text-xs rounded hover:bg-red-700">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
