{% extends 'base.html.twig' %}

{% block title %}Marchands - ZANDO Market{% endblock %}
{% block header %}Gestion des Marchands{% endblock %}
{% block subtitle %}Gérez les comptes marchands{% endblock %}

{% block content %}
<div class="mb-4 flex justify-end">
    <a href="{{ path('market_admin_merchants_new') }}" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-medium">
        <i class="fas fa-plus mr-2"></i>Nouveau Marchand
    </a>
</div>

<div class="bg-white rounded-lg shadow-sm p-4 mb-4">
    <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-3">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Recherche</label>
            <input type="text" name="search" value="{{ filters.search ?? '' }}" 
                   placeholder="Nom, prénom ou téléphone..." 
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
            <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                <option value="">Tous</option>
                <option value="active" {% if filters.status ?? '' == 'active' %}selected{% endif %}>Actif</option>
                <option value="pending_validation" {% if filters.status ?? '' == 'pending_validation' %}selected{% endif %}>En attente</option>
                <option value="suspended" {% if filters.status ?? '' == 'suspended' %}selected{% endif %}>Suspendu</option>
            </select>
        </div>
        <div class="flex items-end">
            <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 text-sm font-medium">
                <i class="fas fa-search mr-2"></i>Filtrer
            </button>
        </div>
    </form>
</div>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Téléphone</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Catégorie</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">KYC</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for merchant in merchants %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm font-medium text-gray-900">{{ merchant.firstname }} {{ merchant.lastname }}</td>
                <td class="px-4 py-3 text-sm text-gray-500">{{ merchant.phone }}</td>
                <td class="px-4 py-3 text-sm text-gray-500">{{ merchant.merchantCategory.name }}</td>
                <td class="px-4 py-3">
                    {% if merchant.status.value == 'active' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Actif</span>
                    {% elseif merchant.status.value == 'pending_validation' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente</span>
                    {% elseif merchant.status.value == 'suspended' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Suspendu</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">{{ merchant.status.value|title }}</span>
                    {% endif %}
                </td>
                <td class="px-4 py-3">
                    {% if merchant.kycLevel.value == 'verified' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Vérifié</span>
                    {% elseif merchant.kycLevel.value == 'full' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Complet</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Basique</span>
                    {% endif %}
                </td>
                <td class="px-4 py-3 text-right text-sm space-x-2">
                    <a href="{{ path('market_admin_merchants_show', {id: merchant.id|bin2hex}) }}" class="text-purple-600 hover:text-purple-900 font-medium">Voir</a>
                    <a href="{{ path('market_admin_merchants_edit', {id: merchant.id|bin2hex}) }}" class="text-blue-600 hover:text-blue-900 font-medium">Modifier</a>
                    {% if merchant.status.value == 'pending_validation' %}
                        {% if merchantsWithPaymentStatus[merchant.id] is defined and merchantsWithPaymentStatus[merchant.id] %}
                        <form method="post" action="{{ path('market_admin_merchants_validate', {id: merchant.id|bin2hex}) }}" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('validate_merchant') }}">
                            <button type="submit" class="text-green-600 hover:text-green-900 font-medium" onclick="return confirm('Valider ce marchand ?')" title="Valider le compte">
                                <i class="fas fa-check-circle"></i> Valider
                            </button>
                        </form>
                        {% else %}
                        <span class="text-gray-400 cursor-not-allowed" title="En attente de paiement validé">
                            <i class="fas fa-clock"></i> Attente paiement
                        </span>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="px-4 py-8 text-center text-sm text-gray-500">Aucun marchand trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
