{% extends 'base.html.twig' %}

{% block title %}Détails du Marchand - {{ merchant.firstname }} {{ merchant.lastname }}{% endblock %}
{% block header %}Détails du Marchand{% endblock %}
{% block subtitle %}{{ merchant.firstname }} {{ merchant.lastname }}{% endblock %}

{% block content %}
<div class="mb-4 flex justify-between items-center">
    <a href="{{ path('market_admin_merchants_index') }}" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
        <i class="fas fa-arrow-left mr-2"></i>Retour
    </a>
    <div class="flex space-x-3">
        {% if merchant.status.value == 'pending_validation' %}
        <form method="post" action="{{ path('market_admin_merchants_validate', {id: merchant.id|bin2hex}) }}" class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('validate_merchant') }}">
            <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" onclick="return confirm('Valider ce marchand ?')">
                <i class="fas fa-check mr-2"></i>Valider le compte
            </button>
        </form>
        {% endif %}
        <a href="{{ path('market_admin_merchants_edit', {id: merchant.id|bin2hex}) }}" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700">
            <i class="fas fa-edit mr-2"></i>Modifier
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold mb-4">Informations personnelles</h3>
        <dl class="space-y-3">
            <div>
                <dt class="text-sm font-medium text-gray-500">Nom complet</dt>
                <dd class="text-sm text-gray-900">{{ merchant.firstname }} {{ merchant.lastname }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
                <dd class="text-sm text-gray-900">{{ merchant.phone }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="text-sm text-gray-900">{{ merchant.email ?: 'Non renseigné' }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Catégorie</dt>
                <dd class="text-sm text-gray-900">{{ merchant.merchantCategory.name }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Type de personne</dt>
                <dd class="text-sm text-gray-900">
                    {% if merchant.personType.value == 'physical' %}Personne Physique
                    {% else %}Personne Morale{% endif %}
                </dd>
            </div>
        </dl>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold mb-4">Statut et KYC</h3>
        <dl class="space-y-3">
            <div>
                <dt class="text-sm font-medium text-gray-500">Statut</dt>
                <dd>
                    {% if merchant.status.value == 'active' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Actif</span>
                    {% elseif merchant.status.value == 'pending_validation' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente de validation</span>
                    {% elseif merchant.status.value == 'suspended' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Suspendu</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">{{ merchant.status.value }}</span>
                    {% endif %}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Niveau KYC</dt>
                <dd>
                    {% if merchant.kycLevel.value == 'verified' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Vérifié</span>
                    {% elseif merchant.kycLevel.value == 'full' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Complet</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Basique</span>
                    {% endif %}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Date d'inscription</dt>
                <dd class="text-sm text-gray-900">{{ merchant.createdAt|date('d/m/Y H:i') }}</dd>
            </div>
            {% if merchant.accountNumber %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Numéro de compte</dt>
                <dd class="text-sm text-gray-900">{{ merchant.accountNumber }}</dd>
            </div>
            {% endif %}
        </dl>
    </div>
</div>

{% if contracts is defined and contracts|length > 0 %}
<div class="mt-6 bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-semibold mb-4">Contrats</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Code</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Espace</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dates</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for contract in contracts %}
                <tr>
                    <td class="px-4 py-3 text-sm">{{ contract.contractCode }}</td>
                    <td class="px-4 py-3 text-sm">{{ contract.space.code }}</td>
                    <td class="px-4 py-3 text-sm">{{ contract.startDate|date('d/m/Y') }} - {{ contract.endDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">{{ contract.status.value }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}
{% endblock %}
