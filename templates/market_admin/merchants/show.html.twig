{% extends 'base.html.twig' %}

{% block title %}Détails du Marchand - {{ merchant.firstname }} {{ merchant.lastname }}{% endblock %}
{% block header %}Détails du Marchand{% endblock %}
{% block subtitle %}{{ merchant.firstname }} {{ merchant.lastname }}{% endblock %}

{% block content %}
<div class="mb-4 flex justify-between items-center">
    <a href="{{ path('market_admin_merchants_index') }}" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
        <i class="fas fa-arrow-left mr-2"></i>Retour
    </a>
    <div class="flex space-x-3">
        {% if merchant.status.value == 'pending_validation' %}
        <form method="post" action="{{ path('market_admin_merchants_validate', {id: merchant.id|bin2hex}) }}" class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('validate_merchant') }}">
            <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" onclick="return confirm('Valider ce marchand ?')">
                <i class="fas fa-check mr-2"></i>Valider le compte
            </button>
        </form>
        {% endif %}
        <a href="{{ path('market_admin_merchants_edit', {id: merchant.id|bin2hex}) }}" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700">
            <i class="fas fa-edit mr-2"></i>Modifier
        </a>
    </div>
</div>

<!-- Informations principales -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold mb-4 flex items-center">
            <i class="fas fa-user mr-2 text-blue-600"></i>
            Informations personnelles
        </h3>
        <dl class="space-y-3">
            <div>
                <dt class="text-sm font-medium text-gray-500">Nom complet</dt>
                <dd class="text-sm text-gray-900 font-semibold">{{ merchant.firstname }} {{ merchant.lastname }}</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
                <dd class="text-sm text-gray-900">
                    <i class="fas fa-phone mr-1 text-green-600"></i>{{ merchant.phone }}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="text-sm text-gray-900">
                    <i class="fas fa-envelope mr-1 text-blue-600"></i>{{ merchant.email ?: 'Non renseigné' }}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Catégorie</dt>
                <dd class="text-sm text-gray-900">
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded">{{ merchant.merchantCategory.name }}</span>
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Type de personne</dt>
                <dd class="text-sm text-gray-900">
                    {% if merchant.personType.value == 'physical' %}
                        <span class="px-2 py-1 bg-green-100 text-green-800 rounded">Personne Physique</span>
                    {% else %}
                        <span class="px-2 py-1 bg-purple-100 text-purple-800 rounded">Personne Morale</span>
                    {% endif %}
                </dd>
            </div>
        </dl>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold mb-4 flex items-center">
            <i class="fas fa-shield-alt mr-2 text-green-600"></i>
            Statut et KYC
        </h3>
        <dl class="space-y-3">
            <div>
                <dt class="text-sm font-medium text-gray-500">Statut</dt>
                <dd>
                    {% if merchant.status.value == 'active' %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                            <i class="fas fa-check-circle mr-1"></i>Actif
                        </span>
                    {% elseif merchant.status.value == 'pending_validation' %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">
                            <i class="fas fa-clock mr-1"></i>En attente de validation
                        </span>
                    {% elseif merchant.status.value == 'suspended' %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">
                            <i class="fas fa-ban mr-1"></i>Suspendu
                        </span>
                    {% else %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">{{ merchant.status.value }}</span>
                    {% endif %}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Niveau KYC</dt>
                <dd>
                    {% if merchant.kycLevel.value == 'verified' %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-blue-100 text-blue-800">
                            <i class="fas fa-check-double mr-1"></i>Vérifié
                        </span>
                    {% elseif merchant.kycLevel.value == 'full' %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                            <i class="fas fa-star mr-1"></i>Complet
                        </span>
                    {% else %}
                        <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">
                            <i class="fas fa-user-check mr-1"></i>Basique
                        </span>
                    {% endif %}
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Date d'inscription</dt>
                <dd class="text-sm text-gray-900">
                    <i class="fas fa-calendar mr-1 text-purple-600"></i>{{ merchant.createdAt|date('d/m/Y à H:i') }}
                </dd>
            </div>
            {% if merchant.accountNumber %}
            <div>
                <dt class="text-sm font-medium text-gray-500">Numéro de compte</dt>
                <dd class="text-sm text-gray-900 font-mono font-semibold">{{ merchant.accountNumber }}</dd>
            </div>
            {% endif %}
        </dl>
    </div>
</div>

<!-- Documents KYC -->
<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <h3 class="text-lg font-semibold mb-4 flex items-center">
        <i class="fas fa-file-alt mr-2 text-orange-600"></i>
        Documents KYC
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% if merchant.cniPath %}
        <div class="border rounded-lg p-4 hover:shadow-md transition">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700">
                    <i class="fas fa-id-card mr-2 text-blue-600"></i>CNI
                </span>
                <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Disponible</span>
            </div>
            <a href="{{ asset('uploads/kyc/' ~ merchant.cniPath) }}" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm">
                <i class="fas fa-eye mr-1"></i>Visualiser
            </a>
        </div>
        {% else %}
        <div class="border rounded-lg p-4 bg-gray-50">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-500">
                    <i class="fas fa-id-card mr-2"></i>CNI
                </span>
                <span class="px-2 py-1 text-xs bg-gray-200 text-gray-600 rounded">Non fourni</span>
            </div>
        </div>
        {% endif %}

        {% if merchant.rccmPath %}
        <div class="border rounded-lg p-4 hover:shadow-md transition">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700">
                    <i class="fas fa-building mr-2 text-purple-600"></i>RCCM
                </span>
                <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Disponible</span>
            </div>
            <a href="{{ asset('uploads/kyc/' ~ merchant.rccmPath) }}" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm">
                <i class="fas fa-eye mr-1"></i>Visualiser
            </a>
        </div>
        {% else %}
        <div class="border rounded-lg p-4 bg-gray-50">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-500">
                    <i class="fas fa-building mr-2"></i>RCCM
                </span>
                <span class="px-2 py-1 text-xs bg-gray-200 text-gray-600 rounded">Non fourni</span>
            </div>
        </div>
        {% endif %}

        {% if merchant.nifPath %}
        <div class="border rounded-lg p-4 hover:shadow-md transition">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-700">
                    <i class="fas fa-file-invoice mr-2 text-green-600"></i>NIF
                </span>
                <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Disponible</span>
            </div>
            <a href="{{ asset('uploads/kyc/' ~ merchant.nifPath) }}" target="_blank" class="text-blue-600 hover:text-blue-800 text-sm">
                <i class="fas fa-eye mr-1"></i>Visualiser
            </a>
        </div>
        {% else %}
        <div class="border rounded-lg p-4 bg-gray-50">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-500">
                    <i class="fas fa-file-invoice mr-2"></i>NIF
                </span>
                <span class="px-2 py-1 text-xs bg-gray-200 text-gray-600 rounded">Non fourni</span>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Réservations -->
{% if reservations is defined and reservations|length > 0 %}
<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <h3 class="text-lg font-semibold mb-4 flex items-center">
        <i class="fas fa-calendar-check mr-2 text-blue-600"></i>
        Réservations ({{ reservations|length }})
    </h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Espace</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date début</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date fin</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for reservation in reservations %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-sm">{{ reservation.space.name }}</td>
                    <td class="px-4 py-3 text-sm">{{ reservation.startDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">{{ reservation.endDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">
                        {% if reservation.status.value == 'confirmed' %}
                            <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Confirmée</span>
                        {% elseif reservation.status.value == 'pending' %}
                            <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded">En attente</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs bg-gray-100 text-gray-800 rounded">{{ reservation.status.value }}</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-3 text-sm font-semibold">{{ reservation.totalAmount|number_format(0, ',', ' ') }} FC</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}

<!-- Contrats -->
{% if contracts is defined and contracts|length > 0 %}
<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
    <h3 class="text-lg font-semibold mb-4 flex items-center">
        <i class="fas fa-file-contract mr-2 text-purple-600"></i>
        Contrats ({{ contracts|length }})
    </h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">N° Contrat</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Espace</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date début</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date fin</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for contract in contracts %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-sm font-mono">{{ contract.contractNumber }}</td>
                    <td class="px-4 py-3 text-sm">{{ contract.space.name }}</td>
                    <td class="px-4 py-3 text-sm">{{ contract.startDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">{{ contract.endDate|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm">
                        {% if contract.status.value == 'active' %}
                            <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">Actif</span>
                        {% elseif contract.status.value == 'expired' %}
                            <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded">Expiré</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs bg-gray-100 text-gray-800 rounded">{{ contract.status.value }}</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-3 text-sm">
                        {% if contract.documentPath %}
                        <a href="{{ asset('uploads/contracts/' ~ contract.documentPath) }}" target="_blank" class="text-blue-600 hover:text-blue-800">
                            <i class="fas fa-file-pdf mr-1"></i>Voir PDF
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}

<!-- Factures et Paiements -->
{% if invoices is defined and invoices|length > 0 %}
<div class="bg-white rounded-lg shadow-sm p-6">
    <h3 class="text-lg font-semibold mb-4 flex items-center">
        <i class="fas fa-file-invoice-dollar mr-2 text-green-600"></i>
        Factures et Paiements ({{ invoices|length }})
    </h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">N° Facture</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for invoice in invoices %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-sm font-mono">{{ invoice.invoiceNumber }}</td>
                    <td class="px-4 py-3 text-sm">{{ invoice.createdAt|date('d/m/Y') }}</td>
                    <td class="px-4 py-3 text-sm font-semibold">{{ invoice.totalAmount|number_format(0, ',', ' ') }} FC</td>
                    <td class="px-4 py-3 text-sm">
                        {% if invoice.status.value == 'paid' %}
                            <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded">
                                <i class="fas fa-check-circle mr-1"></i>Payée
                            </span>
                        {% elseif invoice.status.value == 'pending' %}
                            <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded">
                                <i class="fas fa-clock mr-1"></i>En attente
                            </span>
                        {% elseif invoice.status.value == 'overdue' %}
                            <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded">
                                <i class="fas fa-exclamation-triangle mr-1"></i>En retard
                            </span>
                        {% else %}
                            <span class="px-2 py-1 text-xs bg-gray-100 text-gray-800 rounded">{{ invoice.status.value }}</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-3 text-sm">
                        <a href="{{ path('market_admin_invoices_show', {id: invoice.id|bin2hex}) }}" class="text-blue-600 hover:text-blue-800 mr-2">
                            <i class="fas fa-eye mr-1"></i>Voir
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endif %}

{% endblock %}
