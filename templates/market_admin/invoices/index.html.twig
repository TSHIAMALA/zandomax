{% extends 'base.html.twig' %}

{% block title %}Factures - ZANDO Market{% endblock %}
{% block header %}Gestion des Factures{% endblock %}
{% block subtitle %}Suivez et gérez toutes les factures{% endblock %}

{% block content %}
<div class="bg-white rounded-lg shadow-sm p-4 mb-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
        <div class="bg-green-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-green-700">Total Payé</div>
            <div class="text-2xl font-bold text-green-900">{{ stats.totalPaid }} CDF</div>
        </div>
        <div class="bg-yellow-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-yellow-700">En Attente</div>
            <div class="text-2xl font-bold text-yellow-900">{{ stats.pending }} CDF</div>
        </div>
        <div class="bg-red-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-red-700">En Retard</div>
            <div class="text-2xl font-bold text-red-900">{{ stats.overdueCount }} factures</div>
        </div>
    </div>
    
    <form method="get" class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
            <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                <option value="">Tous</option>
                <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>En attente</option>
                <option value="paid" {% if currentStatus == 'paid' %}selected{% endif %}>Payée</option>
                <option value="overdue" {% if currentStatus == 'overdue' %}selected{% endif %}>En retard</option>
                <option value="cancelled" {% if currentStatus == 'cancelled' %}selected{% endif %}>Annulée</option>
            </select>
        </div>
        <div class="flex items-end">
            <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 text-sm font-medium">
                <i class="fas fa-search mr-2"></i>Filtrer
            </button>
        </div>
    </form>
</div>

<div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">N° Facture</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Marchand</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date d'échéance</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for invoice in invoices %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 text-sm font-medium text-purple-600">{{ invoice.invoiceNumber }}</td>
                <td class="px-4 py-3 text-sm text-gray-900">{{ invoice.merchant.firstname }} {{ invoice.merchant.lastname }}</td>
                <td class="px-4 py-3 text-sm font-medium text-gray-900">{{ invoice.totalAmount }} {{ invoice.currency }}</td>
                <td class="px-4 py-3 text-sm text-gray-500">{{ invoice.dueDate|date('d/m/Y') }}</td>
                <td class="px-4 py-3">
                    {% if invoice.status.value == 'paid' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Payée</span>
                    {% elseif invoice.status.value == 'pending' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">En attente</span>
                    {% elseif invoice.status.value == 'overdue' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">En retard</span>
                    {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">{{ invoice.status.value }}</span>
                    {% endif %}
                </td>
                <td class="px-4 py-3 text-right text-sm space-x-2">
                    <a href="{{ path('market_admin_invoices_show', {id: invoice.id|bin2hex}) }}" class="text-purple-600 hover:text-purple-900 font-medium">Voir</a>
                    <a href="{{ path('market_admin_invoices_pdf', {id: invoice.id|bin2hex}) }}" class="text-blue-600 hover:text-blue-900 font-medium" target="_blank">PDF</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="px-4 py-8 text-center text-sm text-gray-500">Aucune facture trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
